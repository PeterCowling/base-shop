{
  "extends": "@acme/config/tsconfig.app.json",
  "compilerOptions": {
    "allowJs": false,
    "baseUrl": ".",
    "rootDir": "../..",
    "paths": {
      "@/*": [
        "./dist/*",
        "../../packages/ui/dist/src/*",
        "../../packages/i18n/dist/*"
      ],
      "@ui/*": [
        "../../packages/ui/dist/src/*"
      ],
      "@ui/src/*": [
        "../../packages/ui/dist/src/*"
      ],
      "@i18n/*": [
        "../../packages/i18n/dist/*"
      ],
      "@platform-core": [
        "../../packages/platform-core/dist/index"
      ],
      "@platform-core/*": [
        "../../packages/platform-core/dist/*"
      ],
      "@acme/platform-core": [
        "../../packages/platform-core/dist/index"
      ],
      "@acme/platform-core/*": [
        "../../packages/platform-core/dist/*"
      ],
      "@auth": [
        "../../packages/auth/dist/index",
        "../../packages/auth/dist"
      ],
      "@auth/*": [
        "../../packages/auth/dist/*"
      ],
      "@date-utils": [
        "../../packages/date-utils/dist/index",
        "../../packages/date-utils/dist"
      ],
      "@date-utils/*": [
        "../../packages/date-utils/dist/*"
      ],
      "@shared-utils": [
        "../../packages/shared-utils/dist/index",
        "../../packages/shared-utils/dist"
      ],
      "@shared-utils/*": [
        "../../packages/shared-utils/dist/*"
      ],
      "@acme/types": [
        "../../packages/types/dist/index",
        "../../packages/types/dist"
      ],
      "@acme/types/*": [
        "../../packages/types/dist/*"
      ]
    },
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "jsx": "preserve",
    "resolveJsonModule": true
  },
  "include": [
    "src/**/*",
    ".next/types/**/*.ts",
    "shop.json",
    "next-env.d.ts",
    "src/**/*.json",
    "routes/**/*",
    "middleware.ts"
  ],
  "exclude": [
    "dist",
    "node_modules",
    "../../apps-script",
    ".next",
    "../../packages/**/__tests__/**",
    "../../test",
    "**/__tests__/**",
    "**/__mocks__/**",
    "**/*.spec.*",
    "**/*.stories.*"
  ],
  "references": [
    {
      "path": "../../packages/ui"
    },
    {
      "path": "../../packages/i18n"
    },
    {
      "path": "../../packages/platform-core"
    },
    {
      "path": "../../packages/auth"
    },
    {
      "path": "../../packages/date-utils"
    },
    {
      "path": "../../packages/shared-utils"
    },
    {
      "path": "../../packages/types"
    },
    {
      "path": "../../packages/zod-utils"
    }
  ]
}
