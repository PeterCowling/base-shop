{
  "extends": "../../packages/config/tsconfig.nextjs-app.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*",
        "dist/*",
        "../../packages/ui/dist/*"
      ],
      "@acme/ui": [
        "../../packages/ui/dist/index.d.ts",
        "../../packages/ui/src/index.ts"
      ],
      "@acme/ui/*": [
        "../../packages/ui/dist/*",
        "../../packages/ui/src/*"
      ],
      "@ui": [
        "../../packages/ui/dist/index.d.ts",
        "../../packages/ui/src/index.ts"
      ],
      "@ui/*": [
        "../../packages/ui/dist/*",
        "../../packages/ui/src/*"
      ],
      "@acme/telemetry": [
        "../../packages/telemetry/src/index.ts",
        "../../packages/telemetry/dist/index.d.ts"
      ],
      "react-router": [
        "src/compat/react-router.tsx"
      ],
      "react-router-dom": [
        "src/compat/react-router-dom.tsx"
      ],
      "react-router/dom": [
        "src/compat/react-router-dom.tsx"
      ],
      "@react-router/dev/routes": [
        "src/compat/react-router-dev-routes.ts"
      ]
    }
  },
  "include": [
    "next-env.d.ts",
    "instrumentation.ts",
    "src/**/*.d.ts",
    "src/**/*.json",
    "src/**/*",
    ".next/types/**/*.ts",
    "functions/**/*",
    "scripts/**/*",
    "tests/**/*",
    "workers/**/*"
  ],
  "exclude": [
    ".next/types/server.d.ts",
    "**/__mocks__/**",
    "**/__tests__/**",
    "**/*.spec.*",
    "**/*.test.*"
  ]
}
