{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "noEmit": false,
    "rootDir": "src",
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@acme/ui": ["types-compat/ui", "../ui/dist/index.d.ts"],
      "@acme/ui/*": ["types-compat/ui-components/*", "../ui/dist/*"],
      "@acme/types": ["../types/src/index", "../types/dist/index.d.ts"],
      "@acme/types/*": ["../types/src/*", "../types/dist/*"]
    }
  },
  "include": ["src/**/*", "types-compat/**/*.d.ts"],
  "exclude": ["dist", "**/__tests__/**", ".turbo", "node_modules"],
  "references": [{ "path": "../types" }]
}
