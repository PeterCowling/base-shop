{
  "extends": "../../tsconfig.base.json",

  "compilerOptions": {
    /* this library emits JS + declaration files ---------------------- */
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "noEmit": false,
    "outDir": "dist",

    /* keep imports package-relative; forbid .ts extension in paths ---- */
    "allowImportingTsExtensions": false,

    /* Node targets only (no React here) ------------------------------ */
    "types": ["node"],

    /* path aliases --------------------------------------------------- */
    "paths": {
      "@platform-machine": ["."],
      "@platform-machine/*": ["*"],

      /* shared utilities (compiled output lives in ../lib/dist) */
      "@lib/*": ["../lib/*"]
    }
  },

  /* project references ---------------------------------------------- */
  "references": [{ "path": "../platform-core" }, { "path": "../lib" }],

  /* source globs ----------------------------------------------------- */
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": ["dist", "__tests__"]
}
