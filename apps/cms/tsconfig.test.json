// apps/cms/tsconfig.test.json
{
  "extends": "./tsconfig.json",

  "compilerOptions": {
    /* ------------------------------------------------------------------ */
    /*  Jest / Testing-library runtime types                              */
    /* ------------------------------------------------------------------ */
    "types": ["@testing-library/jest-dom", "jest", "node"],

    /* ------------------------------------------------------------------ */
    /*  Test-only compiler flags                                          */
    /* ------------------------------------------------------------------ */
    "noEmit": true,
    "allowJs": true,
    "jsx": "react-jsx",
    "outDir": ".ts-jest",
    // Force CommonJS modules for Jest/ts-jest so ESM deps (transformed) run under Jest
    "module": "CommonJS",
    "moduleResolution": "Node"
  },

  /* ------------------------------------------------------------------ */
  /*  Unit-test sources that ts-jest should see                          */
  /* ------------------------------------------------------------------ */
  "include": [
    "src/**/*",
    "__tests__/**/*",
    "jest.env.ts",
    "jest.setup.ts",
    "jest.setup.after.ts",
    "jest.setup.polyfills.ts"
  ],
  "exclude": ["src/lib/__tests__/**"]
}
