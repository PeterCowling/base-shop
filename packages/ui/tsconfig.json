{
  "extends": "../../tsconfig.base.json",

  "compilerOptions": {
    "composite": true,
    "outDir": "dist",
    "jsx": "react-jsx",
    "rootDir": "../..",

    "rootDirs": [
      "components",
      "hooks",
      "../platform-core",
      "../i18n",
      "../types"
    ]
  },

  "references": [
    { "path": "../platform-core" },
    { "path": "../i18n" },
    { "path": "../types" },
    { "path": "../config" },
    { "path": "../auth" }
  ],
  "include": [
    "components/**/*",
    "hooks/**/*",
    "utils/**/*",
    "../i18n/*.json",
    "../themes/**/*.ts"
  ],
  "exclude": ["dist"]
}
