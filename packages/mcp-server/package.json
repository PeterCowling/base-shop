{
  "name": "@acme/mcp-server",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "mcp-server": "./dist/index.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./booking-email": {
      "types": "./dist/booking-email.d.ts",
      "import": "./dist/booking-email.js",
      "default": "./dist/booking-email.js"
    },
    "./guest-email-activity": {
      "types": "./dist/guest-email-activity.d.ts",
      "import": "./dist/guest-email-activity.js",
      "default": "./dist/guest-email-activity.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc -b",
    "clean": "rimraf dist *.tsbuildinfo",
    "start": "node ./dist/index.js",
    "dev": "tsx ./src/index.ts",
    "test:startup-loop": "pnpm -w run test:governed -- jest -- --config packages/mcp-server/jest.startup-loop.config.cjs --runInBand",
    "gmail:auth": "tsx ./scripts/test-gmail-auth.ts",
    "lint": "NODE_OPTIONS='--max-old-space-size=8192' eslint .",
    "lint:templates": "tsx ./scripts/lint-templates.ts",
    "typecheck": "tsc -b"
  },
  "dependencies": {
    "@acme/config": "workspace:^",
    "@acme/lib": "workspace:^",
    "@acme/platform-core": "workspace:^",
    "@acme/zod-utils": "workspace:^",
    "@google-cloud/local-auth": "^3.0.1",
    "@modelcontextprotocol/sdk": "^1.0.0",
    "google-auth-library": "^10.5.0",
    "googleapis": "^171.0.0",
    "playwright-core": "1.57.0",
    "zod": "^3.25.73"
  },
  "devDependencies": {
    "@types/node": "^20.19.4",
    "tsx": "^4.19.0",
    "typescript": "^5.8.3"
  }
}
