{
  "extends": "@acme/config/tsconfig.app.json",
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": "../..",
    "paths": {
      "@/*": ["./src/*"],
      "@acme/types": [
        "../../packages/types/src/index.ts", "../../packages/types/dist/index.d.ts"
      ],
      "@acme/types/*": [
        "../../packages/types/src/*", "../../packages/types/dist/*"
      ]
    }
  },
  "include": [
    "src/**/*",
    "next-env.d.ts",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "dist",
    "node_modules",
    "**/*.spec.*",
    "**/*.test.*",
    "**/*.stories.*",
    "**/*.cy.*"
  ],
  "references": [
    { "path": "../../packages/types" }
  ]
}
