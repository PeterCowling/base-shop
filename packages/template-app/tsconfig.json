// packages/template-app/tsconfig.json
{
  "extends": "../../tsconfig.base.json",
  /* ------------------------------------------------------------------
   *  Compiler options â”€ production / app source only
   * ------------------------------------------------------------------ */
  "compilerOptions": {
    /* build behaviour ------------------------------------------------- */
    "noEmit": true,
    "incremental": true,
    "rootDir": "src",
    "outDir": "dist",
    /* language / libs ------------------------------------------------- */
    "target": "ES2017",
    "module": "esnext",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "jsx": "preserve",
    /* module resolution ------------------------------------------------ */
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    /* tooling ---------------------------------------------------------- */
    "plugins": [
      {
        "name": "next"
      }
    ],
    "types": [
      "node",
      "react",
      "react-dom"
    ],
    "strict": false,
    "skipLibCheck": true,
    "allowJs": true
  },
  /* ------------------------------------------------------------------
   *  Project references
   * ------------------------------------------------------------------ */
  "references": [
    {
      "path": "../types"
    }
  ],
  /* ------------------------------------------------------------------
   *  File globs
   * ------------------------------------------------------------------ */
  "include": [
    /* app source */
    "src/**/*",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "dist", // freshly emitted output
    "__tests__", // unit/integration tests
    ".turbo", // turbo cache
    "node_modules" // package deps (if any local)
  ]
}
