// packages/platform-core/tsconfig.json
{
  "extends": "../../tsconfig.base.json",

  "compilerOptions": {
    /* emit JS + declaration files ------------------------------------ */
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "noEmit": false,
    "outDir": "dist",

    /* React JSX ------------------------------------------------------- */
    "jsx": "react-jsx",

    /* keep package-local imports relative to this folder ------------- */
    "baseUrl": ".",

    /* forbid `import './foo.ts'` in source */
    "allowImportingTsExtensions": false,

    /* React global types only */
    "types": ["react", "react-dom"],

    /* --------------------------------------------------------------- */
    /*  Path aliases (unchanged)                                       */
    /* --------------------------------------------------------------- */
    "paths": {
      "@platform-core": ["."],
      "@platform-core/*": ["*"],

      "@types": ["../../src/types/index.ts"],
      "@types/*": ["../../src/types/*"],
      "@types/shared": ["../../packages/types/src/index.ts"],
      "@types/shared/*": ["../../packages/types/src/*"],

      "@/components/shop/*": ["components/shop/*"],
      "@/contexts/*": ["contexts/*"],
      "@/lib/*": ["lib/*"],

      "@themes/*": ["../themes/*"],
      "@lib/*": ["../lib/*"],
      "@cms/*": ["../../apps/cms/src/*"]
    }
  },

  /* ----------------------------------------------------------------- */
  /*  Source files                                                     */
  /* ----------------------------------------------------------------- */
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": ["dist", "__tests__"],

  /* ----------------------------------------------------------------- */
  /*  Project references                                               */
  /* ----------------------------------------------------------------- */
  "references": [{ "path": "../lib" }]
}
