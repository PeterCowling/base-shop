{
  "extends": "@acme/config/tsconfig.app.json",
  "compilerOptions": {
    "baseUrl": ".",
    "strict": true,
    "allowJs": false,
    "exactOptionalPropertyTypes": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,
    "useUnknownInCatchVariables": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "disableSourceOfProjectReferenceRedirect": true,
    "skipLibCheck": true,
    "paths": {
      "@/*": [
        "src/*",
        "dist/*"
      ],
      "@ui": [
        "../../packages/ui/dist/index.d.ts"
      ],
      "@ui/*": [
        "../../packages/ui/dist/*"
      ],
      "@acme/ui": [
        "../../packages/ui/dist/index.d.ts"
      ],
      "@acme/ui/*": [
        "../../packages/ui/dist/*"
      ],
      "@i18n": [
        "../../packages/i18n/dist/index.d.ts"
      ],
      "@i18n/*": [
        "../../packages/i18n/dist/*"
      ],
      "@acme/pipeline-engine": [
        "../../packages/pipeline-engine/dist/index.d.ts"
      ],
      "@acme/pipeline-engine/*": [
        "../../packages/pipeline-engine/dist/*"
      ],
      "@acme/lib": [
        "../../packages/lib/dist/index.d.ts"
      ],
      "@acme/lib/*": [
        "../../packages/lib/dist/*"
      ],
      "@acme/design-system": [
        "../../packages/design-system/dist/index.d.ts"
      ],
      "@acme/design-system/*": [
        "../../packages/design-system/dist/*"
      ]
    },
    "types": ["node", "react", "react-dom", "three"],
    "jsx": "preserve"
  },
  "include": [
    "next-env.d.ts",
    "src/**/*",
    "src/app/**/*",
    "src/app/**/*.ts",
    "src/app/**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    ".next/types/server.d.ts",
    "**/__mocks__/**",
    "**/__tests__/**",
    "**/*.spec.*",
    "**/*.test.*"
  ],
  "references": [
    {
      "path": "../../packages/pipeline-engine"
    }
  ]
}
