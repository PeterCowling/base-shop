{
  "extends": "../../tsconfig.base.json",

  "compilerOptions": {
    /* Build as a referenced project and emit JS + .d.ts into dist */
    "composite": true,
    "noEmit": false,
    "emitDeclarationOnly": false,

    /* Declarations + maps, mirroring src/ -> dist/ */
    "declaration": true,
    "declarationMap": true,
    "declarationDir": "dist",
    "rootDir": "src",
    "outDir": "dist",

    /* Modern ESM settings for predictable resolution */
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ES2022",

    /* React components */
    "jsx": "react-jsx",

    /* Typing + performance */
    "strict": true,
    "skipLibCheck": true,

    /* Keep local imports package-relative */
    "allowImportingTsExtensions": false,

    /* Ambient types available in this package */
    "types": ["react", "react-dom", "next"]
  },

  "include": ["src/**/*"],
  "exclude": ["dist", "**/__tests__/**", ".turbo", "node_modules"],

  "references": [
    { "path": "../lib" },
    { "path": "../types" },
    { "path": "../themes/base" }
  ]
}
