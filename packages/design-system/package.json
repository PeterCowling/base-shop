{
  "name": "@acme/design-system",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./atoms": {
      "types": "./dist/atoms/index.d.ts",
      "import": "./dist/atoms/index.js"
    },
    "./atoms/*": {
      "types": "./dist/atoms/*.d.ts",
      "import": "./dist/atoms/*.js"
    },
    "./molecules": {
      "types": "./dist/molecules/index.d.ts",
      "import": "./dist/molecules/index.js"
    },
    "./molecules/*": {
      "types": "./dist/molecules/*.d.ts",
      "import": "./dist/molecules/*.js"
    },
    "./primitives": {
      "types": "./dist/primitives/index.d.ts",
      "import": "./dist/primitives/index.js"
    },
    "./primitives/*": {
      "types": "./dist/primitives/*.d.ts",
      "import": "./dist/primitives/*.js"
    },
    "./shadcn": {
      "types": "./dist/shadcn/index.d.ts",
      "import": "./dist/shadcn/index.js"
    },
    "./shadcn/*": {
      "types": "./dist/shadcn/*.d.ts",
      "import": "./dist/shadcn/*.js"
    },
    "./hooks": {
      "types": "./dist/hooks/index.d.ts",
      "import": "./dist/hooks/index.js"
    },
    "./hooks/*": {
      "types": "./dist/hooks/*.d.ts",
      "import": "./dist/hooks/*.js"
    },
    "./utils/style": {
      "types": "./dist/utils/style/index.d.ts",
      "import": "./dist/utils/style/index.js"
    },
    "./utils/style/*": {
      "types": "./dist/utils/style/*.d.ts",
      "import": "./dist/utils/style/*.js"
    }
  },
  "scripts": {
    "build": "tsc -b",
    "dev": "tsc -b --watch",
    "clean": "rimraf dist *.tsbuildinfo",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "test": "pnpm exec jest --ci --runInBand --detectOpenHandles --config ./jest.config.cjs --coverage",
    "test:quick": "JEST_DISABLE_COVERAGE_THRESHOLD=1 pnpm exec jest --runInBand --detectOpenHandles --config ./jest.config.cjs",
    "lint": "eslint ."
  },
  "dependencies": {
    "@acme/i18n": "workspace:*",
    "@acme/lib": "workspace:*",
    "@acme/platform-core": "workspace:*",
    "@acme/types": "workspace:*",
    "@radix-ui/react-checkbox": "^1.3.2",
    "@radix-ui/react-dialog": "^1.1.14",
    "@radix-ui/react-dropdown-menu": "^2.1.6",
    "@radix-ui/react-icons": "^1.3.2",
    "@radix-ui/react-popover": "^1.1.15",
    "@radix-ui/react-select": "^2.2.5",
    "@radix-ui/react-slot": "^1.2.3",
    "@tanstack/react-table": "^8.21.3",
    "clsx": "^2.1.1",
    "react-datepicker": "^9.1.0",
    "tailwind-merge": "^2.5.5"
  },
  "peerDependencies": {
    "chart.js": "^4",
    "next": ">=15",
    "react": ">=19 <20",
    "react-chartjs-2": "^5",
    "react-dom": ">=19 <20",
    "tailwindcss": "^4"
  },
  "peerDependenciesMeta": {
    "chart.js": { "optional": true },
    "react-chartjs-2": { "optional": true }
  },
  "devDependencies": {
    "@types/node": "^22",
    "jest-axe": "^10.0.0",
    "typescript": "^5.8.3"
  }
}
