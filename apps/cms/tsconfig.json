// apps/cms/tsconfig.json
{
  "extends": "../../tsconfig.base.json",

  "compilerOptions": {
    /* ----------------- existing options (unchanged) ----------------- */
    "outDir": "dist",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "plugins": [{ "name": "next" }],
    "jsx": "preserve",
    "target": "ES2017",
    "skipLibCheck": true,
    "strict": false,
    "module": "esnext",
    "moduleResolution": "node",
    "types": ["@cloudflare/workers-types", "node", "jest"]
  },

  /* ------------------------------------------------------------------ */
  /*  ðŸ‘‡  ADD THE TEST GLOB(S) HERE                                     */
  /* ------------------------------------------------------------------ */
  "include": [
    "src",
    "__tests__", // top-level test folder
    "**/__tests__/**/*.ts", // nested test folders, if any
    "**/__tests__/**/*.tsx",
    ".next/types/**/*.ts"
  ],

  "exclude": ["node_modules", "../../apps-script"]
}
