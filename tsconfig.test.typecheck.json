{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "types": ["node", "jest", "@testing-library/jest-dom"],
    "allowJs": true,
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "rootDir": ".",
    "noEmit": true,
    "verbatimModuleSyntax": false,
    "paths": {
      "~test/*": ["test/*"],
      "@acme/editorial": ["packages/editorial/src/index.ts", "packages/editorial/dist/index.d.ts"],
      "@acme/editorial/*": ["packages/editorial/src/*", "packages/editorial/dist/*"],
      "@acme/platform-machine": ["packages/platform-machine/src/index.ts", "packages/platform-machine/dist/index.d.ts"],
      "@acme/platform-machine/*": ["packages/platform-machine/src/*", "packages/platform-machine/dist/*"],
      "@acme/ui": ["packages/ui/src/index.ts", "packages/ui/dist/index.d.ts"],
      "@acme/ui/*": ["packages/ui/src/*", "packages/ui/dist/*"],
      "@cms": ["apps/cms/src", "apps/cms/dist/index.d.ts"],
      "@cms/*": ["apps/cms/src/*", "apps/cms/dist/*"],
      "@themes/*": ["packages/themes/*/src", "packages/themes/*/dist/index.d.ts"],
      "@acme/lib": ["packages/lib/src/index.ts", "packages/lib/dist/index.d.ts"],
      "@acme/lib/*": ["packages/lib/src/*", "packages/lib/dist/*"],
      "@acme/i18n": ["packages/i18n/src/index.ts", "packages/i18n/dist/index.d.ts"],
      "@acme/i18n/*": ["packages/i18n/src/*", "packages/i18n/dist/*"],
      "@acme/auth": ["packages/auth/src/index.ts", "packages/auth/dist/index.d.ts"],
      "@acme/auth/*": ["packages/auth/src/*", "packages/auth/dist/*"],
      "@acme/platform-core": ["packages/platform-core/src/index.ts", "packages/platform-core/dist/index.d.ts"],
      "@acme/platform-core/*": ["packages/platform-core/src/*", "packages/platform-core/dist/*"],
      "@acme/shared-utils": ["packages/shared-utils/src/index.ts", "packages/shared-utils/dist/index.d.ts"],
      "@acme/shared-utils/*": ["packages/shared-utils/src/*", "packages/shared-utils/dist/*"],
      "@acme/email": ["packages/email/src/index.ts", "packages/email/dist/index.d.ts"],
      "@acme/email/*": ["packages/email/src/*", "packages/email/dist/*"],
      "@acme/email-templates": ["packages/email-templates/src/index.ts", "packages/email-templates/dist/index.d.ts"],
      "@acme/email-templates/*": ["packages/email-templates/src/*", "packages/email-templates/dist/*"],
      "@acme/stripe": ["packages/stripe/src/index.ts", "packages/stripe/dist/index.d.ts"],
      "@acme/stripe/*": ["packages/stripe/src/*", "packages/stripe/dist/*"],
      "@acme/sanity": ["packages/sanity/src/index.ts", "packages/sanity/dist/index.d.ts"],
      "@acme/sanity/*": ["packages/sanity/src/*", "packages/sanity/dist/*"],
      "@acme/date-utils": ["packages/date-utils/src/index.ts", "packages/date-utils/dist/index.d.ts"],
      "@acme/date-utils/*": ["packages/date-utils/src/*", "packages/date-utils/dist/*"],
      "@acme/config": ["packages/config/src/index.ts", "packages/config/dist/index.d.ts"],
      "@acme/config/*": ["packages/config/src/*", "packages/config/dist/*"],
      "@acme/configurator": ["packages/configurator/src/index.ts", "packages/configurator/dist/index.d.ts"],
      "@acme/configurator/*": ["packages/configurator/src/*", "packages/configurator/dist/*"],
      "@acme/tailwind-config": ["packages/tailwind-config/src/index.ts", "packages/tailwind-config/dist/index.d.ts"],
      "@acme/tailwind-config/*": ["packages/tailwind-config/src/*", "packages/tailwind-config/dist/*"],
      "@acme/theme": ["packages/theme/src/index.ts", "packages/theme/dist/index.d.ts"],
      "@acme/theme/*": ["packages/theme/src/*", "packages/theme/dist/*"],
      "@acme/zod-utils": ["packages/zod-utils/src/index.ts", "packages/zod-utils/dist/index.d.ts"],
      "@acme/zod-utils/*": ["packages/zod-utils/src/*", "packages/zod-utils/dist/*"],
      "@acme/test-utils": ["packages/test-utils/src/index.ts", "packages/test-utils/dist/index.d.ts"],
      "@acme/test-utils/*": ["packages/test-utils/src/*", "packages/test-utils/dist/*"],
      "@acme/page-builder-core": ["packages/page-builder-core/src/index.ts", "packages/page-builder-core/dist/index.d.ts"],
      "@acme/page-builder-core/*": ["packages/page-builder-core/src/*", "packages/page-builder-core/dist/*"],
      "@acme/templates": ["packages/templates/src/index.ts", "packages/templates/dist/index.d.ts"],
      "@acme/templates/*": ["packages/templates/src/*", "packages/templates/dist/*"],
      "@acme/pipeline-engine": ["packages/pipeline-engine/src/index.ts", "packages/pipeline-engine/dist/index.d.ts"],
      "@acme/pipeline-engine/*": ["packages/pipeline-engine/src/*", "packages/pipeline-engine/dist/*"],
      "@acme/types": ["packages/types/src/index.ts", "packages/types/dist/index.d.ts"],
      "@acme/types/*": ["packages/types/src/*", "packages/types/dist/*"],
      "@acme/telemetry": ["test/__mocks__/telemetryMock.ts"],
      "@acme/plugin-sanity": ["test/__mocks__/pluginSanityStub.ts"],
      "@acme/plugin-sanity/*": ["test/__mocks__/pluginSanityStub.ts"],
      "@prisma/client": ["__mocks__/@prisma/client.ts"]
    }
  },
  "include": [
    "jest.setup.ts",
    "test/**/*.ts",
    "test/**/*.tsx",
    "test/**/*.js",
    "packages/**/__tests__/**/*.ts",
    "packages/**/__tests__/**/*.tsx",
    "packages/**/?(*.)+(spec|test).ts",
    "packages/**/?(*.)+(spec|test).tsx"
  ],
  "exclude": ["test/e2e/**", "**/node_modules/**", "**/dist/**"]
}
