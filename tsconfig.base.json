{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "ES2022",
    "module": "esnext",
    "jsx": "react-jsx",
    "moduleResolution": "bundler",
    "moduleSuffixes": [
      ".server",
      ".client",
      ""
    ],
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "noEmit": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "outDir": "dist-types",
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "types": [
      "node",
      "react",
      "react-dom"
    ],
    "paths": {
      "@acme/platform-machine": ["packages/platform-machine/src"],
      "@acme/platform-machine/*": ["packages/platform-machine/src/*"],
      "@acme/ui": ["packages/ui/src"],
      "@acme/ui/*": ["packages/ui/src/*"],
      "@ui": ["packages/ui/src"],
      "@ui/*": ["packages/ui/src/*"],
      "@/*": ["packages/ui/src/*"],
      "@cms": ["apps/cms/src"],
      "@cms/*": ["apps/cms/src/*"],
      "@themes/*": ["packages/themes/*"],
      "@acme/lib": ["packages/lib/src"],
      "@acme/lib/*": ["packages/lib/src/*"],
      "@lib": ["packages/lib/src"],
      "@lib/*": ["packages/lib/src/*"],
      "@i18n": ["packages/i18n/src"],
      "@i18n/*": ["packages/i18n/src/*"],
      "@auth": ["packages/auth/src"],
      "@auth/*": ["packages/auth/src/*"],
      "@acme/config": ["packages/config/src"],
      "@acme/config/*": ["packages/config/src/*"],
      "@platform-core": ["packages/platform-core/src"],
      "@platform-core/*": ["packages/platform-core/src/*"],
      "@acme/platform-core": ["packages/platform-core/src"],
      "@acme/platform-core/*": ["packages/platform-core/src/*"],
      "@acme/shared-utils": ["packages/shared-utils/src"],
      "@acme/shared-utils/*": ["packages/shared-utils/src/*"],
      "@shared-utils": ["packages/shared-utils/src"],
      "@shared-utils/*": ["packages/shared-utils/src/*"],
      "@acme/email": ["packages/email/src"],
      "@acme/email/*": ["packages/email/src/*"],
      "@acme/stripe": ["packages/stripe/src"],
      "@acme/stripe/*": ["packages/stripe/src/*"],
      "@acme/sanity": ["packages/sanity/src"],
      "@acme/sanity/*": ["packages/sanity/src/*"],
      "@acme/date-utils": ["packages/date-utils/src"],
      "@acme/date-utils/*": ["packages/date-utils/src/*"],
      "@acme/configurator": ["packages/configurator/src"],
      "@acme/configurator/*": ["packages/configurator/src/*"],
      "@acme/next-config": ["packages/next-config/src"],
      "@acme/next-config/*": ["packages/next-config/src/*"],
      "@acme/tailwind-config": ["packages/tailwind-config/src"],
      "@acme/tailwind-config/*": ["packages/tailwind-config/src/*"]
    }
  },
  "files": [
    "./src/types/global.d.ts"
  ],
  "exclude": [
    "**/__mocks__/**",
    "**/__tests__/**"
  ]
}
