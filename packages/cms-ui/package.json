{
  "name": "@acme/cms-ui",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./blocks": {
      "types": "./dist/blocks/index.d.ts",
      "import": "./dist/blocks/index.js"
    },
    "./blocks/*": {
      "types": "./dist/blocks/*.d.ts",
      "import": "./dist/blocks/*.js"
    },
    "./page-builder": {
      "types": "./dist/page-builder/index.d.ts",
      "import": "./dist/page-builder/index.js"
    },
    "./page-builder/*": {
      "types": "./dist/page-builder/*.d.ts",
      "import": "./dist/page-builder/*.js"
    },
    "./hooks": {
      "types": "./dist/hooks/index.d.ts",
      "import": "./dist/hooks/index.js"
    },
    "./hooks/*": {
      "types": "./dist/hooks/*.d.ts",
      "import": "./dist/hooks/*.js"
    },
    "./marketing": {
      "types": "./dist/marketing/index.d.ts",
      "import": "./dist/marketing/index.js"
    },
    "./marketing/*": {
      "types": "./dist/marketing/*.d.ts",
      "import": "./dist/marketing/*.js"
    },
    "./media": {
      "types": "./dist/media/index.d.ts",
      "import": "./dist/media/index.js"
    },
    "./media/*": {
      "types": "./dist/media/*.d.ts",
      "import": "./dist/media/*.js"
    },
    "./products": {
      "types": "./dist/products/index.d.ts",
      "import": "./dist/products/index.js"
    },
    "./products/*": {
      "types": "./dist/products/*.d.ts",
      "import": "./dist/products/*.js"
    },
    "./nav": {
      "types": "./dist/nav/index.d.ts",
      "import": "./dist/nav/index.js"
    },
    "./nav/*": {
      "types": "./dist/nav/*.d.ts",
      "import": "./dist/nav/*.js"
    },
    "./style": {
      "types": "./dist/style/index.d.ts",
      "import": "./dist/style/index.js"
    },
    "./style/*": {
      "types": "./dist/style/*.d.ts",
      "import": "./dist/style/*.js"
    }
  },
  "scripts": {
    "build": "tsc -b",
    "clean": "rimraf dist *.tsbuildinfo",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "test": "pnpm exec jest --ci --runInBand --detectOpenHandles --config ./jest.config.cjs --coverage",
    "test:quick": "JEST_DISABLE_COVERAGE_THRESHOLD=1 pnpm exec jest --runInBand --detectOpenHandles --config ./jest.config.cjs",
    "lint": "eslint ."
  },
  "dependencies": {
    "@acme/design-system": "workspace:*",
    "@acme/i18n": "workspace:*",
    "@acme/page-builder-core": "workspace:*",
    "@acme/platform-core": "workspace:*",
    "@acme/types": "workspace:*",
    "@acme/ui": "workspace:*",
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@tiptap/extension-link": "^2.24.0",
    "@tiptap/extension-underline": "^2.24.0",
    "@tiptap/react": "^2.24.0",
    "@tiptap/starter-kit": "^2.24.0",
    "clsx": "^2.1.1",
    "dompurify": "^3.2.4",
    "tailwind-merge": "^2.5.5"
  },
  "peerDependencies": {
    "next": ">=15",
    "react": ">=19 <20",
    "react-dom": ">=19 <20",
    "tailwindcss": "^4"
  },
  "devDependencies": {
    "jest-axe": "^10.0.0",
    "typescript": "^5.8.3"
  }
}
