// packages/template-app/tsconfig.json
{
  "extends": "../../tsconfig.base.json",

  /* ------------------------------------------------------------------
   *  Compiler options
   * ------------------------------------------------------------------ */
  "compilerOptions": {
    /* build behaviour ------------------------------------------------- */
    "outDir": "dist",
    "noEmit": true,
    "incremental": true,

    /* language / libs ------------------------------------------------- */
    "target": "ES2017",
    "module": "esnext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "jsx": "preserve",

    /* module resolution ------------------------------------------------ */
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,

    /* tooling ---------------------------------------------------------- */
    "plugins": [{ "name": "next" }],
    "types": ["node", "react", "react-dom"],
    "strict": false,
    "skipLibCheck": true
  },

  /* ------------------------------------------------------------------
   *  File globs
   * ------------------------------------------------------------------ */
  "include": [
    /* app source */
    "src/**/*",

    /* Next-generated types */
    ".next/types/**/*.ts",

    /* tests */
    "__tests__/**/*",
    "**/__tests__/**/*.ts",
    "**/__tests__/**/*.tsx",

    /* shared workspaces */
    "../../packages/**/src/**/*"
  ],

  "exclude": ["node_modules", "src/routes/preview/[pageId].ts"]
}
