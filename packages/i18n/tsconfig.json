// packages/i18n/tsconfig.json
{
  "extends": "../../tsconfig.base.json",

  "compilerOptions": {
    /* this package emits JS + d.ts files ------------------------------ */
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "noEmit": false,
    "outDir": "dist",

    /* TSX support for <Translations /> etc. */
    "jsx": "react-jsx",

    /* node + react globals only (browser libs inherited from base) */
    "types": ["react", "react-dom"],

    /* forbid .ts extension imports in source */
    "allowImportingTsExtensions": false
  },

  /* source files ------------------------------------------------------ */
  "include": ["*.ts", "*.tsx", "src/**/*"],
  "exclude": ["dist"],

  /* project-references â€” none needed; i18n is leaf-level for now */
  "references": []
}
