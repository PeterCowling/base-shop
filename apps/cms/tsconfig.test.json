// apps/cms/tsconfig.test.json
{
  "extends": "./tsconfig.json",

  "compilerOptions": {
    /* ------------------------------------------------------------------ */
    /*  Jest / Testing-library runtime types                              */
    /* ------------------------------------------------------------------ */
    "types": ["@testing-library/jest-dom", "jest", "node"],

    /* ------------------------------------------------------------------ */
    /*  Test-only compiler flags                                          */
    /* ------------------------------------------------------------------ */
    "noEmit": true, // type-check only, don’t write .js
    "allowJs": true // ✔ compile the *.server.js ESM files
  },

  /* ------------------------------------------------------------------ */
  /*  Unit-test sources that ts-jest should see                          */
  /* ------------------------------------------------------------------ */
  "include": ["src/**/*", "__tests__/**/*"]
}
