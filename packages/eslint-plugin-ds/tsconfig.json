{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": "src",
    "outDir": "dist",
    "module": "NodeNext",
    "target": "ES2022",
    "moduleResolution": "NodeNext",
    "declaration": true,
    "strict": true,
    "noEmit": false,
    "paths": {
      "@acme/eslint-plugin-ds": [
        "./src/index.ts",
        "./dist/index.d.ts"
      ],
      "@acme/eslint-plugin-ds/*": [
        "./src/*",
        "./dist/*"
      ]
    }
  },
  "include": ["src"],
  "exclude": ["dist", "tests"]
}
