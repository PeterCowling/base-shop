{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://example.com/schemas/shop.json",
  "title": "Shop",
  "type": "object",
  "required": [
    "id",
    "name",
    "catalogFilters",
    "themeId",
    "themeOverrides",
    "filterMappings",
    "priceOverrides",
    "localeOverrides"
  ],
  "properties": {
    "id": { "type": "string" },
    "name": { "type": "string" },
    "catalogFilters": {
      "type": "array",
      "items": { "type": "string" }
    },
    "themeId": { "type": "string" },
    "themeOverrides": {
      "type": "object",
      "additionalProperties": { "type": "string" },
      "default": {}
    },
    "themeTokens": {
      "type": "object",
      "additionalProperties": { "type": "string" },
      "description": "Mapping of design tokens to theme values (defaults merged with overrides)"
    },
    "filterMappings": {
      "type": "object",
      "additionalProperties": { "type": "string" }
    },
    "priceOverrides": {
      "type": "object",
      "additionalProperties": { "type": "number" }
    },
    "localeOverrides": {
      "type": "object",
      "additionalProperties": { "type": "string" }
    }
  },
  "additionalProperties": false
}
