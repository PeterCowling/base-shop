// packages/platform-core/tsconfig.json
{
  "extends": "../../tsconfig.base.json",

  /* ------------------------------------------------------------------
   *  Compiler options
   * ------------------------------------------------------------------ */
  "compilerOptions": {
    "composite": true,
    "emitDeclarationOnly": false,
    "noEmit": false, // ← must allow emit

    /* ───── output location ───── */
    "declarationDir": "dist",
    "declarationMap": true,
    "rootDir": "src",
    "outDir": "dist",

    /* React components ------------------------------------------------ */
    "jsx": "react-jsx",

    /* node_modules chatter ------------------------------------------- */
    "skipLibCheck": true,

    /* local imports stay package-relative ----------------------------- */
    "allowImportingTsExtensions": false,

    /* Next, React globals only --------------------------------------- */
    "types": ["react", "react-dom", "next"]
  },

  /* ------------------------------------------------------------------
   *  File globs
   * ------------------------------------------------------------------ */
  "include": ["src/**/*"],
  "exclude": [
    "dist", // freshly emitted output
    "**/__tests__/**", // unit/integration tests
    ".turbo", // turbo cache
    "node_modules" // package deps (if any local)
  ],

  /* ------------------------------------------------------------------
   *  Build order
   * ------------------------------------------------------------------ */
  "references": [
    { "path": "../lib" },
    { "path": "../types" },
    { "path": "../config" },
    { "path": "../date-utils" },
    { "path": "../stripe" },
    { "path": "../shared-utils" },
    { "path": "../email" },
    { "path": "../plugins/sanity" },
    { "path": "../themes/base" }
  ]
}
