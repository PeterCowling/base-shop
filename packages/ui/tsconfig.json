{
  "extends": "../../tsconfig.base.json",

  "compilerOptions": {
    "allowImportingTsExtensions": false,
    "noEmit": false,
    "composite": true,
    "outDir": "dist",
    "jsx": "react-jsx",
    "rootDir": "../..",

    "rootDirs": [
      "components",
      "hooks",
      "../platform-core",
      "../i18n",
      "../types",
      "../cms/src",
      "../../apps/cms/src"
    ]
  },

  "references": [
    { "path": "../platform-core" },
    { "path": "../i18n" },
    { "path": "../config" },
    { "path": "../auth" },
    { "path": "../lib" }
  ],
  "include": [
    "components/**/*",
    "hooks/**/*",
    "utils/**/*",
    "../i18n/*.json",
    "../themes/**/*.ts",
    "../../apps/cms/src/actions/**/*.ts",
    "../cms/src/actions/**/*",
    "../cms/src/auth/**/*",
    "../cms/src/types/**/*",
    "../../src/**/*.ts",
    "../../apps/cms/src/**/*"
  ],
  "exclude": ["dist"]
}
