// apps/cms/tsconfig.json  – final, error-free
{
  "extends": "../../tsconfig.base.json",

  "compilerOptions": {
    /* referenced-project requirements */
    "composite": true,
    "emitDeclarationOnly": true,
    "noEmit": false,

    /* existing options … */
    "outDir": "dist",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "incremental": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "plugins": [{ "name": "next" }],
    "jsx": "preserve",
    "target": "ES2017",
    "skipLibCheck": true,
    "strict": false,
    "module": "esnext",
    "moduleResolution": "node",
    "types": ["node", "react", "react-dom"]
  },

  "include": ["src/**/*", ".next/types/**/*.ts"],

  "exclude": [
    "dist" /* ← prevents overwrite loop            */,
    "__tests__" /* app unit tests handled elsewhere     */,
    "**/*.test.ts" /* ditto                                */,
    "**/*.test.tsx",
    "node_modules",
    "../../apps-script"
  ]
}
