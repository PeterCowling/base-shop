{
  "name": "cms-monorepo",
  "version": "0.1.0",
  "private": true,
  "packageManager": "pnpm@10.12.1",
  "engines": {
    "node": ">=20"
  },
  "workspaces": [
    "apps/*",
    "packages/*",
    "packages/*/*"
  ],
  "scripts": {
    "dev": "turbo run dev --parallel",
    "build": "pnpm run build:tokens && turbo run build",
    "build:tokens": "ts-node scripts/build-tokens.ts",
    "start": "turbo run start --parallel",
    "lint": "turbo run lint",
    "lint:all": "eslint \"{apps,packages,src}/**/*.{ts,tsx,js,jsx}\" --ignore-pattern \"**/dist/**\"",
    "typecheck": "tsc -b --pretty",
    "test": "turbo run test",
    "test:coverage": "turbo run test -- --coverage",
    "e2e": "cypress run",
    "i18n:extract": "next-intl extract",
    "i18n:check": "ts-node scripts/check-i18n-schemas.ts",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "preview": "wrangler pages dev",
    "format": "prettier --write .",
    "create-shop": "ts-node scripts/create-shop.ts",
    "setup-ci": "ts-node scripts/setup-ci.ts",
    "gen": "plop --plopfile plopfile.ts",
    "plop": "pnpm gen",
    "release-deposits": "ts-node scripts/release-deposits.ts",
    "provision-cms": "pnpm run create-shop && pnpm run build:tokens",
    "cms:migrate": "ts-node scripts/migrate-cms.ts",
    "deposit-service": "ts-node packages/platform-machine/releaseDepositsService.ts",
    "lh:checkout": "lighthouse http://localhost:3000/en/checkout --chrome-flags=\"--headless\" --only-categories=performance,accessibility,best-practices,seo --preset=desktop",
    "validate-env": "ts-node scripts/validate-env.ts",
    "shadcn:diff": "ts-node scripts/diff-shadcn.ts"
  },
  "dependencies": {
    "@cloudflare/next-on-pages": "^1.13.12",
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@radix-ui/react-icons": "^1.3.2",
    "@radix-ui/react-popover": "^1.1.14",
    "@sentry/node": "^9.33.0",
    "@stripe/react-stripe-js": "^3.7.0",
    "@stripe/stripe-js": "^7.3.1",
    "@tanstack/react-query": "^5.81.4",
    "bcryptjs": "^3.0.2",
    "chart.js": "^4.5.0",
    "next": "15.3.4",
    "next-auth": "4.24.11",
    "next-intl": "^3.5.0",
    "next-seo": "^6.8.0",
    "react": "^19.0.0",
    "react-chartjs-2": "^5.3.0",
    "react-dom": "^19.0.0",
    "react-hook-form": "^7.59.0",
    "shadcn-ui": "^0.9.5",
    "sharp": "^0.34.2",
    "stripe": "^18.2.1",
    "ulid": "^3.0.1",
    "zod": "^3.25.67",
    "nodemailer": "^6.10.1"
  },
  "devDependencies": {
    "@acme/tailwind-config": "workspace:*",
    "@cloudflare/workers-types": "^4.20250627.0",
    "@eslint/eslintrc": "^3",
    "@playwright/test": "^1.53.1",
    "@storybook/addon-a11y": "^9.0.13",
    "@storybook/addon-interactions": "^8.6.14",
    "@storybook/addon-themes": "^9.0.13",
    "@storybook/addon-viewport": "^9.0.8",
    "@storybook/nextjs": "^9.0.13",
    "@storybook/react": "9.0.13",
    "@sveltejs/vite-plugin-svelte": "^5.1.0",
    "@tailwindcss/container-queries": "^0.1.1",
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/postcss": "^4",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@total-typescript/ts-reset": "^0.6.1",
    "@types/jest": "^29.5.14",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "cross-fetch": "^4.1.0",
    "cypress": "^14.5.0",
    "eslint": "^9",
    "eslint-config-next": "15.3.4",
    "eslint-plugin-boundaries": "^5.0.1",
    "eslint-plugin-jest": "^29.0.1",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-testing-library": "^7.5.3",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "msw": "^1.3.5",
    "nock": "^13.4.0",
    "playwright": "^1.53.1",
    "plop": "^4.0.1",
    "prettier": "^3.5.3",
    "prettier-plugin-tailwindcss": "^0.6.13",
    "storybook": "^9.0.13",
    "tailwindcss": "^4",
    "ts-jest": "^29.1.5",
    "ts-node": "^10.9.1",
    "turbo": "^1.13.0",
    "typescript": "^5.1.0",
    "vite": "^7.0.0",
    "wrangler": "^4.20.4",
    "lighthouse": "^11.5.0"
  },
  "pnpm": {
    "overrides": {
      "@types/google-apps-script@*": "npm:@esbuild-plugins/empty@1.0.0",
      "@shadcn/ui": "0.0.4"
    }
  }
}
