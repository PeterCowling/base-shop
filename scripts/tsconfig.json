// scripts/tsconfig.json
{
  "extends": "../tsconfig.base.json",

  "compilerOptions": {
    /* emit Node-friendly JS + declaration files ---------------------- */
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "noEmit": false,
    "outDir": "../dist-scripts",

    /* language / module settings ------------------------------------- */
    "module": "esnext",
    "target": "ES2017",

    /* Node globals available ----------------------------------------- */
    "types": ["node"],

    /* keep import paths extension-less ------------------------------- */
    "allowImportingTsExtensions": false
  },

  /* project references â€“ only other composite libs ------------------ */
  "references": [
    { "path": "../packages/platform-core" },
    { "path": "../packages/lib" },
    { "path": "../packages/config" }
  ],

  /* source globs ----------------------------------------------------- */
  "include": ["**/*.ts"],
  "exclude": ["../dist-scripts"]
}
