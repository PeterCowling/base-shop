{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "moduleResolution": "Bundler",
    "jsx": "preserve",
    "resolveJsonModule": true,
    "paths": {
      "@/*": [
        "./src/*",
        "../ui/src/*",
        "../i18n/src/*"
      ],
      "@ui/*": [
        "../ui/src/*"
      ],
      "@ui/src/*": [
        "../ui/src/*"
      ],
      "@i18n/*": [
        "../i18n/src/*"
      ],
      "@platform-core": [
        "../platform-core/src/index"
      ],
      "@platform-core/*": [
        "../platform-core/src/*"
      ],
      "@acme/platform-core": [
        "../platform-core/src/index"
      ],
      "@acme/platform-core/*": [
        "../platform-core/src/*"
      ],
      "@acme/config": [
        "../config/dist/index"
      ],
      "@acme/config/*": [
        "./src/env/*.impl.ts",
        "../config/dist/*"
      ],
      "@auth": [
        "../auth/src/index",
        "../auth/src"
      ],
      "@auth/*": [
        "../auth/src/*"
      ],
      "@date-utils": [
        "../date-utils/src/index",
        "../date-utils/src"
      ],
      "@date-utils/*": [
        "../date-utils/src/*"
      ],
      "better-sqlite3": [
        "../platform-core/src/types/better-sqlite3"
      ]
    },
    "allowJs": true,
    "incremental": true,
    "isolatedModules": true,
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "middleware.ts",
    "src/**/*",
    "src/**/*.json",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ],
  "files": [
    "../platform-core/src/prisma.d.ts"
  ]
}
