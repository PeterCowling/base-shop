  "include": [
    "__tests__/**/*.ts",
    "__tests__/**/*.tsx",
    "__tests__/**/*.d.ts",
    "src/**/*.test.ts",
    "src/**/*.test.tsx",
    "src/**/*.spec.ts",
    "src/**/*.spec.tsx"
  ],
  "exclude": ["**/node_modules/**", "**/dist/**"]
