// packages/platform-core/tsconfig.json
{
  "extends": "../../tsconfig.base.json",

  "compilerOptions": {
    "allowImportingTsExtensions": false,
    "noEmit": false,
    "composite": true,
    "outDir": "dist",
    "jsx": "react-jsx",
    "baseUrl": ".",
    "rootDirs": ["./", "../../src", "../lib"],

    "paths": {
      /* â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ */
      /*  Local self-aliases                                             */
      /* â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ */
      "@platform-core": ["."],
      "@platform-core/*": ["*"],

      /* â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ */
      /*  Shared monorepo-level type barrel                              */
      /* â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ */
      "@types": ["../../src/types/index.ts"],
      "@types/*": ["../../src/types/*"],
      "@types/shared": ["../../packages/types/src/index.ts"],
      "@types/shared/*": ["../../packages/types/src/*"],

      /* â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ */
      /*  Existing package-scoped @/â€¦ aliases                            */
      /* â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ */
      "@/components/shop/*": ["components/shop/*"],
      "@/contexts/*": ["contexts/*"],
      "@/lib/*": ["lib/*"],

      /*  Bring back the repo-level @lib alias so this package can */
      /*  access shared utilities such as stripeServer                */
      "@lib/*": ["../lib/*"],

      /* Alias to access CMS sources */
      "@cms/*": ["../../apps/cms/src/*"]
    }
  },

  //*  Include package sources */
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": ["__tests__", "dist"],

  /*  ðŸ‘‡  Finally: declare the `src` composite project as a dependency
   *       so incremental builds stay fast and sane.                     */
  "references": [{ "path": "../../src" }, { "path": "../lib" }]
}
