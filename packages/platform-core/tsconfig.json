// packages/platform-core/tsconfig.json
{
  "extends": "../../tsconfig.base.json",

  "compilerOptions": {
    "composite": true,
    "noEmit": false,
    "emitDeclarationOnly": false,
    "declaration": true,
    "declarationMap": true,
    "rootDir": "src",
    "outDir": "dist",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "target": "ES2022",
    "lib": ["ES2022", "DOM"],
    "jsx": "react-jsx",
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "verbatimModuleSyntax": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@platform-core/*": ["./src/*"]
    },
    "types": ["react", "react-dom", "next"]
  },

  "include": ["src/**/*"],
  "exclude": ["dist", "**/__tests__/**", ".turbo", "node_modules"],

  "references": [
    { "path": "../lib" },
    { "path": "../types" },
    { "path": "../themes/base" }
  ]
}
