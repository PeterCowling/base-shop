{
  "extends": "../../tsconfig.test.typecheck.json",
  "compilerOptions": {
    "composite": false,
    "declaration": false,
    "declarationDir": null,
    "declarationMap": false,
    "emitDeclarationOnly": false,
    "strict": false,
    "noImplicitAny": false,
    "typeRoots": ["../../node_modules/@types", "../../node_modules"]
  },
  "include": [
    "jest-globals.d.ts",
    "src/__tests__/**/*.ts",
    "src/__tests__/**/*.tsx",
    "src/**/*.test.ts",
    "src/**/*.test.tsx",
    "__tests__/**/*.ts",
    "__tests__/**/*.tsx"
  ],
  "exclude": ["**/node_modules/**", "**/dist/**"]
}
