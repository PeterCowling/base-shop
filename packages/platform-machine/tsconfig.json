// packages/platform-machine/tsconfig.json
{
  "extends": "../../tsconfig.base.json",

  /* ------------------------------------------------------------------
   *  Compiler options
   * ------------------------------------------------------------------ */
  "compilerOptions": {
    /* JS + .d.ts output --------------------------------------------- */
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "noEmit": false,
    "outDir": "dist",

    /* Node targets only --------------------------------------------- */
    "types": ["node"],

    /* Keep imports package-relative --------------------------------- */
    "allowImportingTsExtensions": false,

    /* ----------------------------------------------------------------
     *  Path aliases — this block *overrides* the one from
     *  tsconfig.base.json, so we must re-declare everything we need.
     * ---------------------------------------------------------------- */
    "paths": {
      /* this package itself */
      "@platform-machine": ["."],
      "@platform-machine/*": ["*"],

      /* shared lib utilities (compiled output lives in ../lib/dist) */
      "@lib/stripeServer": ["../lib/stripeServer.server.ts"], // ← added
      "@lib/*": ["../lib/*"]
    }
  },

  /* ------------------------------------------------------------------
   *  Project references
   * ------------------------------------------------------------------ */
  "references": [{ "path": "../platform-core" }, { "path": "../lib" }],

  /* ------------------------------------------------------------------
   *  Source globs
   * ------------------------------------------------------------------ */
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": ["dist", "__tests__"]
}
