{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "moduleResolution": "Bundler",
    "jsx": "react-jsx",
    "resolveJsonModule": true,
    "paths": {
      "@/*": [
        "./src/*",
        "../ui/src/*",
        "../i18n/src/*"
      ],
      "@ui/*": [
        "../ui/*"
      ],
      "@acme/platform-core": [
        "../platform-core/src/index"
      ],
      "@acme/platform-core/*": [
        "../platform-core/src/*"
      ]
    }
  },
  "include": [
    "next-env.d.ts",
    "src/**/*",
    "src/**/*.json",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
