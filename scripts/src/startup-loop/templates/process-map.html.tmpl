<script>
(function() {
  function updateCrossStreamArrows() {
    var svg = document.getElementById('laneArrowsSvg');
    if (!svg) return;
    var container = svg.closest('.lane-wrapper');
    if (!container) return;
    var containerRect = container.getBoundingClientRect();

    var pairs = [
      { pathId: 'arrow-m01-p02', labelId: 'label-m01-p02',
        srcId: 'stage-market-01', tgtId: 'stage-products-02',
        trackFrac: 0.33 },   /* amber — left track in gap */
      { pathId: 'arrow-m03-p04', labelId: 'label-m03-p04',
        srcId: 'stage-market-03', tgtId: 'stage-products-04',
        trackFrac: 0.67 }    /* cyan  — right track in gap */
    ];

    pairs.forEach(function(pair) {
      var path  = document.getElementById(pair.pathId);
      var label = document.getElementById(pair.labelId);
      var src   = document.getElementById(pair.srcId);
      var tgt   = document.getElementById(pair.tgtId);
      if (!path || !src || !tgt) return;

      var srcLane = src.closest('.lane');
      var tgtLane = tgt.closest('.lane');
      if (!srcLane || !tgtLane) return;

      var srcRect     = src.getBoundingClientRect();
      var tgtRect     = tgt.getBoundingClientRect();
      var srcLaneRect = srcLane.getBoundingClientRect();
      var tgtLaneRect = tgtLane.getBoundingClientRect();

      /* Anchors on the LANE WALLS at each card's vertical centre.
         x1 = right wall of source lane  (start of gap)
         x2 = left wall of target lane   (end of gap)
         The entire connector lives in the inter-lane gap — never inside a lane. */
      var x1   = srcLaneRect.right - containerRect.left;
      var y1   = (srcRect.top  + srcRect.bottom)  / 2 - containerRect.top;
      var x2   = tgtLaneRect.left  - containerRect.left;
      var y2   = (tgtRect.top  + tgtRect.bottom)  / 2 - containerRect.top;
      /* Each connector gets its own vertical track — fraction of the gap width */
      var xmid = x1 + (x2 - x1) * pair.trackFrac;

      /* Orthogonal elbow with rounded corners, contained within the gap */
      var r  = 5;
      var dy = y2 - y1;
      var rs = dy >= 0 ? 1 : -1;
      var ra = Math.min(r, Math.abs(dy) / 2);

      var d;
      if (Math.abs(dy) < 4) {
        d = 'M' + x1.toFixed(1) + ',' + y1.toFixed(1)
          + ' L' + x2.toFixed(1) + ',' + y2.toFixed(1);
      } else {
        d = 'M'  + x1.toFixed(1)         + ',' + y1.toFixed(1)
          + ' L' + (xmid - ra).toFixed(1) + ',' + y1.toFixed(1)
          + ' Q' + xmid.toFixed(1)        + ',' + y1.toFixed(1)
          + ' '  + xmid.toFixed(1)        + ',' + (y1 + ra * rs).toFixed(1)
          + ' L' + xmid.toFixed(1)        + ',' + (y2 - ra * rs).toFixed(1)
          + ' Q' + xmid.toFixed(1)        + ',' + y2.toFixed(1)
          + ' '  + (xmid + ra).toFixed(1) + ',' + y2.toFixed(1)
          + ' L' + x2.toFixed(1)          + ',' + y2.toFixed(1);
      }
      path.setAttribute('d', d);

      if (label) { label.textContent = ''; }
    });
  }

  document.addEventListener('DOMContentLoaded', updateCrossStreamArrows);
  var resizeTimer;
  window.addEventListener('resize', function() {
    clearTimeout(resizeTimer);
    resizeTimer = setTimeout(updateCrossStreamArrows, 100);
  });
})();
</script>

