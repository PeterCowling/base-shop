{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Launch Shop Config",
  "type": "object",
  "required": ["schemaVersion", "shopId", "deployTarget"],
  "properties": {
    "schemaVersion": {
      "type": "integer",
      "minimum": 1
    },
    "shopId": {
      "type": "string",
      "pattern": "^[a-zA-Z0-9_-]+$"
    },
    "deployTarget": {
      "type": "object",
      "required": ["type"],
      "properties": {
        "type": {
          "type": "string",
          "enum": ["cloudflare-pages", "vercel", "local"]
        },
        "projectName": {
          "type": "string",
          "minLength": 1,
          "maxLength": 63
        }
      },
      "additionalProperties": false
    },
    "ci": {
      "type": "object",
      "properties": {
        "workflowName": {
          "type": "string",
          "minLength": 1
        },
        "useReusableWorkflow": {
          "type": "boolean"
        }
      },
      "additionalProperties": false
    },
    "smokeChecks": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["endpoint"],
        "properties": {
          "endpoint": {
            "type": "string",
            "minLength": 1
          },
          "expectedStatus": {
            "type": "integer",
            "minimum": 100,
            "maximum": 599
          }
        },
        "additionalProperties": false
      }
    },
    "environments": {
      "type": "object",
      "additionalProperties": {
        "type": "object",
        "additionalProperties": true
      }
    }
  },
  "additionalProperties": true
}
