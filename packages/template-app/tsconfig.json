{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "moduleResolution": "Bundler",
    "jsx": "preserve",
    "resolveJsonModule": true,
    "paths": {
      "@/*": [
        "./dist/*",
        "../ui/dist/src/*",
        "../i18n/dist/*",
        "./src/*",
        "../ui/src/*",
        "../i18n/src/*"
      ],
      "@ui/*": [
        "../ui/dist/src/*",
        "../ui/src/*"
      ],
      "@ui/src/*": [
        "../ui/dist/src/*",
        "../ui/src/*"
      ],
      "@i18n/*": [
        "../i18n/dist/*",
        "../i18n/src/*"
      ],
      "@platform-core": [
        "../platform-core/dist/index.d.ts",
        "../platform-core/src/index.ts"
      ],
      "@platform-core/*": [
        "../platform-core/dist/*",
        "../platform-core/src/*"
      ],
      "@acme/platform-core": [
        "../platform-core/dist/index.d.ts",
        "../platform-core/src/index.ts"
      ],
      "@acme/platform-core/*": [
        "../platform-core/dist/*",
        "../platform-core/src/*"
      ],
      "@acme/config": [
        "../config/dist/index.d.ts",
        "../config/src/index.ts"
      ],
      "@acme/config/*": [
        "../config/dist/*",
        "./src/env/*.ts",
        "../config/src/*"
      ],
      "@auth": [
        "../auth/dist/index.d.ts",
        "../auth/dist",
        "../auth/src/index.ts",
        "../auth/src"
      ],
      "@auth/*": [
        "../auth/dist/*",
        "../auth/src/*"
      ],
      "@date-utils": [
        "../date-utils/dist/index.d.ts",
        "../date-utils/dist",
        "../date-utils/src/index.ts",
        "../date-utils/src"
      ],
      "@date-utils/*": [
        "../date-utils/dist/*",
        "../date-utils/src/*"
      ],
      "better-sqlite3": [
        "../platform-core/dist/types/better-sqlite3",
        "../platform-core/src/types/better-sqlite3"
      ]
    },
    "allowJs": true,
    "incremental": true,
    "isolatedModules": true,
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "middleware.ts",
    "src/**/*",
    "src/**/*.json",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ],
  "references": [
    { "path": "../config" },
    { "path": "../types" },
    { "path": "../date-utils" },
    { "path": "../i18n" },
    { "path": "../stripe" }
  ],
  "files": [
    "../platform-core/src/prisma.d.ts"
  ]
}
