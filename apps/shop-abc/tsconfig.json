{
  "extends": "../../tsconfig.base.json",

  "compilerOptions": {
    /* --------------------------------------------------------------
       referenced-project requirements
       -------------------------------------------------------------- */
    "composite": true,
    "emitDeclarationOnly": true, // produce .d.ts, no JS
    "noEmit": false, // must NOT disable emit

    /* --------------------------------------------------------------
       existing app settings (unchanged)
       -------------------------------------------------------------- */
    "outDir": "dist",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "incremental": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "plugins": [{ "name": "next" }],
    "jsx": "react-jsx",
    "target": "ES2017",
    "strict": false,
    "module": "esnext",
    "moduleResolution": "node",
    "types": ["node", "react", "react-dom"],
    "skipLibCheck": true
  },

  "include": [
    /* app source */
    "src/**/*",

    /* Next-generated types */
    ".next/types/**/*.ts"
  ],

  "exclude": [
    "node_modules",
    "../../apps-script",
    "src/routes/preview/[pageId].ts"
  ]
}
