// packages/template-app/tsconfig.json
{
  "extends": "../../tsconfig.base.json",

  /* ------------------------------------------------------------------
   *  Compiler options ─ production / app source only
   * ------------------------------------------------------------------ */
  "compilerOptions": {
    /* build behaviour ------------------------------------------------- */
    "outDir": "dist",
    "noEmit": true,
    "incremental": true,

    /* language / libs ------------------------------------------------- */
    "target": "ES2017",
    "module": "esnext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "jsx": "preserve",

    /* module resolution ------------------------------------------------ */
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,

    /* tooling ---------------------------------------------------------- */
    "plugins": [{ "name": "next" }],
    "types": ["node", "react", "react-dom"] /* ← no Jest here */,
    "strict": false,
    "skipLibCheck": true
  },

  /* ------------------------------------------------------------------
   *  Project references
   * ------------------------------------------------------------------ */
  "references": [{ "path": "../types" }],

  /* ------------------------------------------------------------------
   *  File globs
   * ------------------------------------------------------------------ */
  "include": [
    /* app source */
    "src/**/*",

    /* Next-generated types */
    ".next/types/**/*.ts",

    /* shared workspaces */
    "../../packages/**/src/**/*"
  ],

  "exclude": [
    "node_modules",
    /* preview route excluded previously */
    "src/routes/preview/[pageId].ts",

    /* test code handled by tsconfig.test.json */
    "__tests__",
    "**/__tests__"
  ]
}
