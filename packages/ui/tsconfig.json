{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "noEmit": false,
    "emitDeclarationOnly": false,
    "rootDir": "./",
    "outDir": "./dist",
    "declarationDir": "./dist",
    "declarationMap": true,
    "jsx": "react-jsx",
    "types": ["react", "react-dom", "jest", "@testing-library/jest-dom"],
    "resolveJsonModule": true,
    "moduleResolution": "Bundler",
    "module": "ESNext",
    "target": "ES2022",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@acme/platform-core": ["../platform-core/src/index"],
      "@acme/platform-core/*": ["../platform-core/src/*"],
      "@platform-core": ["../platform-core/src/index"],
      "@platform-core/*": ["../platform-core/src/*"],
      "@acme/types": ["../types/src/index"],
      "@acme/types/*": ["../types/src/*"],
      "@ui": ["./src/index"],
      "@ui/*": ["./src/*"],
      "@auth": ["types-compat/auth"]
    }
  },
  "references": [
    {
      "path": "../platform-core"
    },
    {
      "path": "../i18n"
    },
    {
      "path": "../config"
    },
    {
      "path": "../auth"
    },
    {
      "path": "../lib"
    },
    {
      "path": "../shared-utils"
    },
    {
      "path": "../date-utils"
    },
    {
      "path": "../types"
    }
  ],
  "include": [
    "src*",
    "src*.json",
    "types-compat*.d.ts",
    "src/**/*",
    "src/**/*.json",
    "types-compat/**/*.d.ts"
  ],
  "exclude": ["__tests__", "**/__tests__/**", "**/*.test.*", "**/*.spec.*"]
}
