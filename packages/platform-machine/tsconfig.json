{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "allowImportingTsExtensions": false,
    "composite": true,
    "outDir": "dist",
    "rootDir": "../..",
    "rootDirs": ["./", "../platform-core", "../lib", "../../src"],
    "baseUrl": "../..",
    "paths": {
      "@platform-machine": ["."],
      "@platform-machine/*": ["*"],

      /*  Allow access to shared libs such as stripeServer */
      "@lib/*": ["packages/platform-core/*", "packages/lib/*"]
    }
  },
  "references": [
    { "path": "../platform-core" },
    { "path": "../lib" },
    { "path": "../../src" }
  ],
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": ["dist", "__tests__"]
}
