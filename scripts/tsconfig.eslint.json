{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ES2022",
    "lib": ["ES2022"],
    "jsx": "react-jsx",
    "resolveJsonModule": true,
    "allowJs": true,
    "checkJs": false,
    "types": ["node"]
  },
  "include": [
    "./**/*.ts",
    "./**/*.tsx",
    "./__tests__/**/*.ts",
    "./__tests__/**/*.tsx"
  ],
  "exclude": ["./dist", "../node_modules"]
}
