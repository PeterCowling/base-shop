{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "composite": false,
    "declaration": false,
    "declarationDir": null,
    "declarationMap": false,
    "emitDeclarationOnly": false,
    "noEmit": true,
    "rootDir": "../..",
    "types": ["node", "react", "jest"],
    "verbatimModuleSyntax": false
  },
  "include": [
    "src/__tests__/**/*.ts",
    "src/__tests__/**/*.tsx"
  ],
  "exclude": ["**/node_modules/**", "**/dist/**"]
}
