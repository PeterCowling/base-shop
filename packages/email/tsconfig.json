{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "noEmit": false,
    "rootDir": "src",
    "outDir": "dist",
    "types": ["node"],
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": false
  },
  "references": [
    { "path": "../config" },
    { "path": "../ui" },
    { "path": "../lib" },
    { "path": "../platform-core" },
    { "path": "../types" },
    { "path": "../date-utils" }
  ],
  "include": ["src/**/*"],
  "exclude": [
    "dist",
    ".turbo",
    "node_modules",
    "**/__mocks__/**"
  ]
}
