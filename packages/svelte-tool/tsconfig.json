// packages/svelte-tool/tsconfig.json
{
  "extends": "../../tsconfig.base.json",

  "compilerOptions": {
    /* library emits JS + .d.ts files ---------------------------------- */
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "noEmit": false,
    "outDir": "dist",

    /* forbid imports like `./file.ts` in source ----------------------- */
    "allowImportingTsExtensions": false
  },

  /* source entry(s) --------------------------------------------------- */
  "include": ["index.ts"],
  "exclude": ["dist"]
}
