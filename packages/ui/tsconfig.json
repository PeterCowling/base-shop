// packages/ui/tsconfig.json
{
  /* ------------------------------------------------------------------ *
   * 1‚ÄÜ/‚ÄÜ4  ‚Äì  inherit all strict-mode settings etc.                     *
   * ------------------------------------------------------------------ */
  "extends": "../../tsconfig.base.json",

  /* ------------------------------------------------------------------ *
   * 2‚ÄÜ/‚ÄÜ4  ‚Äì  compiler options that are specific to the UI package      *
   * ------------------------------------------------------------------ */
  "compilerOptions": {
    /* this package is meant to be built on its own */
    "composite": true,
    "outDir": "dist",

    /* React / JSX */
    "jsx": "preserve",

    /* tell TS that source files may live in several folders             *
     * ‚Äì the **union** of these paths is treated as one virtual root     */
    "rootDirs": [
      "components",
      "../platform-core", // cartCookie, CartContext, products‚Ä¶
      "../i18n" // useTranslations, locales, json dictionaries
    ]

    /*  ‚¨ÜÔ∏è  üëâ  we purposely DO NOT set ‚ÄúrootDir‚Äù.                       *
     *  When it is omitted, TypeScript just uses the common path of all *
     *  detected source files ‚Äì no more ‚Äúnot under rootDir‚Äù errors.      */
  },

  /* ------------------------------------------------------------------ *
   * 3‚ÄÜ/‚ÄÜ4  ‚Äì  tell tsc how we depend on other *projects* in the mono-repo
   * ------------------------------------------------------------------ */
  "references": [{ "path": "../platform-core" }, { "path": "../i18n" }],

  /* ------------------------------------------------------------------ *
   * 4‚ÄÜ/‚ÄÜ4  ‚Äì  include exactly our own sources (not the whole repo)      *
   * ------------------------------------------------------------------ */
  "include": ["components/**/*"],
  "exclude": ["dist"]
}
