{
  "name": "@acme/i18n",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./package.json": "./package.json",
    "./Translations": {
      "types": "./dist/Translations.d.ts",
      "import": "./dist/Translations.js",
