{
  "name": "@acme/product-configurator",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "main": "./dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./package.json": "./package.json",
    "./*": {
      "types": "./dist/*.d.ts",
      "import": "./dist/*.js",
      "default": "./dist/*.js"
    }
  },
  "files": [
    "dist"
  ],
  "sideEffects": false,
  "scripts": {
    "build": "rimraf dist tsconfig.tsbuildinfo && tsc -p tsconfig.json",
    "dev": "tsc -p tsconfig.json -w",
    "clean": "rimraf dist *.tsbuildinfo",
    "lint": "eslint .",
    "test": "pnpm exec jest --ci --runInBand --detectOpenHandles --config ../../jest.config.cjs"
  },
  "dependencies": {
    "zod": "^3.25.73"
  }
}
