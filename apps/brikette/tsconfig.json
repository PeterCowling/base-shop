{
  "extends": "@acme/config/tsconfig.app.json",
  "compilerOptions": {
    "baseUrl": ".",
    "strict": false,
    "noImplicitAny": false,
    "allowJs": false,
    "exactOptionalPropertyTypes": false,
    "noUncheckedIndexedAccess": false,
    "noImplicitOverride": false,
    "noPropertyAccessFromIndexSignature": false,
    "useUnknownInCatchVariables": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "disableSourceOfProjectReferenceRedirect": true,
    "skipLibCheck": true,
    "paths": {
      "@/*": [
        "src/*",
        "dist/*",
        "../../packages/ui/dist/*"
      ],
      "@acme/ui": [
        "../../packages/ui/dist/index.d.ts",
        "../../packages/ui/src/index.ts"
      ],
      "@acme/ui/*": [
        "../../packages/ui/dist/*",
        "../../packages/ui/src/*"
      ],
      "@acme/telemetry": [
        "../../packages/telemetry/dist/index.d.ts"
      ],
      "@acme/telemetry/*": [
        "../../packages/telemetry/dist/*"
      ],
      "@ui": [
        "../../packages/ui/dist/index.d.ts",
        "../../packages/ui/src/index.ts"
      ],
      "@ui/*": [
        "../../packages/ui/dist/*",
        "../../packages/ui/src/*"
      ]
    },
    "jsx": "preserve",
    "strictNullChecks": true
  },
  "include": [
    "next-env.d.ts",
    "instrumentation.ts",
    "src/**/*.d.ts",
    "src/**/*.json",
    "src/**/*",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    ".next/types/server.d.ts",
    "**/__mocks__/**",
    "**/__tests__/**",
    "**/*.spec.*",
    "**/*.test.*"
  ]
}
