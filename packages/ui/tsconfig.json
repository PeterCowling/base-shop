{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "noEmit": false,
    "emitDeclarationOnly": false,
    "rootDir": "src",
    "outDir": "dist",
    "declarationDir": "dist",
    "declarationMap": true,
    "jsx": "react-jsx",
    "types": ["react", "react-dom", "jest", "@testing-library/jest-dom"],
    "resolveJsonModule": true,
    "moduleResolution": "Bundler",
    "module": "ESNext",
    "target": "ES2022",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@acme/platform-core": ["../platform-core/src/index", "../platform-core/dist/index.d.ts"],
      "@acme/platform-core/*": ["../platform-core/src/*", "../platform-core/dist/*"],
      "@platform-core": ["../platform-core/src/index", "../platform-core/dist/index.d.ts"],
      "@platform-core/*": ["../platform-core/src/*", "../platform-core/dist/*"],
      "@acme/types": ["../types/src/index", "../types/dist/index.d.ts"],
      "@acme/types/*": ["../types/src/*", "../types/dist/*"],
      "@ui": ["./src/index", "./dist/index.d.ts"],
      "@ui/*": ["./src/*", "./dist/*"],
      "@auth": ["types-compat/auth"],
      "@acme/i18n": ["../i18n/src/index", "../i18n/dist/index.d.ts"],
      "@acme/i18n/*": ["../i18n/src/*", "../i18n/dist/*"],
      "@acme/telemetry": [
        "types-compat/telemetry",
        "../telemetry/src/index",
        "../telemetry/dist/index.d.ts"
      ],
      "@acme/telemetry/*": [
        "../telemetry/src/*",
        "../telemetry/dist/*"
      ]
    }
  },
  "references": [
    {
      "path": "../platform-core"
    },
    {
      "path": "../i18n"
    },
    {
      "path": "../config"
    },
    {
      "path": "../auth"
    },
    {
      "path": "../lib"
    },
    {
      "path": "../shared-utils"
    },
    {
      "path": "../date-utils"
    },
    {
      "path": "../types"
    },
    {
      "path": "../telemetry"
    }
  ],
  "include": [
    "src",
    "src/**/*.json",
    "types-compat",
    "types-compat.qrcode.d.ts"
  ],
  "exclude": [
    "__tests__",
    "**/__tests__/**",
    "**/*.test.*",
    "**/*.spec.*",
    "**/*.stories.*"
  ]
}
