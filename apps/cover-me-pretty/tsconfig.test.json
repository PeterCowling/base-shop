{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "types": ["@testing-library/jest-dom", "jest", "node"],
    "noEmit": true,
    "allowJs": true,
    "jsx": "react-jsx",
    "verbatimModuleSyntax": false,
    "baseUrl": "../..",
    "paths": {
      "@/*": ["apps/cover-me-pretty/src/*"],
      "@ui": ["packages/ui/dist/index.d.ts"],
      "@ui/*": ["packages/ui/dist/*"],
      "@acme/ui": ["packages/ui/dist/index.d.ts"],
      "@acme/ui/*": ["packages/ui/dist/*"],
      "@i18n": ["packages/i18n/dist/index.d.ts"],
      "@i18n/*": ["packages/i18n/dist/*"],
      "@acme/i18n": ["packages/i18n/dist/index.d.ts"],
      "@acme/i18n/*": ["packages/i18n/dist/*"],
      "@platform-core": ["packages/platform-core/dist/index.d.ts"],
      "@platform-core/*": ["packages/platform-core/dist/*"],
      "@acme/platform-core": ["packages/platform-core/dist/index.d.ts"],
      "@acme/platform-core/*": ["packages/platform-core/dist/*"],
      "@auth": ["packages/auth/dist/index.d.ts"],
      "@auth/*": ["packages/auth/dist/*"],
      "@acme/auth": ["packages/auth/dist/index.d.ts"],
      "@acme/auth/*": ["packages/auth/dist/*"],
      "@date-utils": ["packages/date-utils/dist/index.d.ts"],
      "@date-utils/*": ["packages/date-utils/dist/*"],
      "@acme/date-utils": ["packages/date-utils/dist/index.d.ts"],
      "@acme/date-utils/*": ["packages/date-utils/dist/*"],
      "@acme/types": ["packages/types/dist/index.d.ts"],
      "@acme/types/*": ["packages/types/dist/*"],
      "@acme/config": ["packages/config/dist/index.d.ts"],
      "@acme/config/*": ["packages/config/dist/*"],
      "@acme/zod-utils": ["packages/zod-utils/dist/index.d.ts"],
      "@acme/zod-utils/*": ["packages/zod-utils/dist/*"],
      "@acme/lib": ["packages/lib/dist/index.d.ts"],
      "@acme/lib/*": ["packages/lib/dist/*"],
      "@acme/email": ["packages/email/dist/index.d.ts"],
      "@acme/email/*": ["packages/email/dist/*"],
      "@acme/email-templates": ["packages/email-templates/dist/index.d.ts"],
      "@acme/email-templates/*": ["packages/email-templates/dist/*"],
      "@acme/stripe": ["packages/stripe/dist/index.d.ts"],
      "@acme/stripe/*": ["packages/stripe/dist/*"],
      "@acme/sanity": ["packages/sanity/dist/index.d.ts"],
      "@acme/sanity/*": ["packages/sanity/dist/*"],
      "@acme/telemetry": ["packages/telemetry/dist/index.d.ts"],
      "@acme/telemetry/*": ["packages/telemetry/dist/*"],
      "@acme/editorial": ["packages/editorial/dist/index.d.ts"],
      "@acme/editorial/*": ["packages/editorial/dist/*"],
      "@acme/page-builder-core": ["packages/page-builder-core/dist/index.d.ts"],
      "@acme/page-builder-core/*": ["packages/page-builder-core/dist/*"],
      "@acme/test-utils": ["packages/test-utils/dist/index.d.ts"],
      "@acme/test-utils/*": ["packages/test-utils/dist/*"],
      "~test/*": ["test/*"]
    }
  },
  "include": [
    "src/**/*",
    "src/**/*.json",
    "__tests__/**/*",
    "middleware.ts",
    "shop.json",
    "../../test/msw/**/*",
    "../../packages/i18n/dist/**/*.json",
    "../../scripts/src/republish-shop.ts"
  ],
  "exclude": ["**/*.cy.tsx", "**/*.cy.ts", "**/*.stories.tsx", "**/*.stories.ts"]
}
