# apps/xa/.env.example
# Cloudflare Images base URL (include account hash or custom domain).
NEXT_PUBLIC_XA_IMAGES_BASE_URL=https://imagedelivery.net/your-account-hash
# Default variant if media paths do not include "/variant".
NEXT_PUBLIC_XA_IMAGES_VARIANT=public
# Optional build/version stamp to bust service worker caches.
NEXT_PUBLIC_XA_SW_VERSION=2026-01-01

# Canonical domain used for share links.
NEXT_PUBLIC_SITE_DOMAIN=thestylemarket.shop

# Stealth / access controls (recommended in production).
# XA_STEALTH_MODE defaults to true in production if unset.
XA_STEALTH_MODE=true
# Strict stealth: always return 404 for unauthorized requests.
XA_STRICT_STEALTH=true
# Mirror stealth mode on the client (hides branding/contact details).
NEXT_PUBLIC_STEALTH_MODE=true
# Optional override shown when stealth mode is on.
NEXT_PUBLIC_STEALTH_BRAND_NAME=Private preview
# Access cookie signing secret (fallbacks: SESSION_SECRET / NEXTAUTH_SECRET).
XA_ACCESS_COOKIE_SECRET=your-strong-secret
# Optional secret for hashing stored invite codes.
XA_INVITE_HASH_SECRET=
# Invite codes (comma-separated). Optional when using the admin console.
XA_STEALTH_INVITE_CODES=
# Require Cloudflare Access to reach the app (checks CF Access headers).
XA_REQUIRE_CF_ACCESS=true
# Allowlist of hostnames (comma-separated) that should resolve.
XA_ALLOWED_HOSTS=thestylemarket.shop
# Optional guard token header (x-xa-guard: <token>).
XA_GUARD_TOKEN=
# Allow robots indexing if explicitly true.
XA_ALLOW_INDEXING=false
# Admin console token (required for /access/admin).
XA_ACCESS_ADMIN_TOKEN=your-admin-token
# Optional path for the invite/request store (defaults to apps/xa/data/access/access-store.json).
XA_ACCESS_STORE_PATH=

# Buzz levers for the access gate.
STEALTH_DROP_LABEL=Next drop
STEALTH_DROP_OPENS_AT=2026-01-01T00:00:00Z
STEALTH_KEYS_REMAINING=17
STEALTH_KEY_SERIES=Cipher-01,Cipher-02,Void-03

# Bulk upload (scripts/src/xa/upload-xa-images.ts).
XA_CLOUDFLARE_ACCOUNT_ID=your-xa-account-id
XA_CLOUDFLARE_IMAGES_TOKEN=your-xa-images-api-token
