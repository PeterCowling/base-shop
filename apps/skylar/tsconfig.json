{
  "extends": "@acme/config/tsconfig.app.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*",
        "dist/*"
      ],
      "@i18n": [
        "../../packages/i18n/src/index.ts",
        "../../packages/i18n/dist/index.d.ts"
      ],
      "@i18n/*": [
        "../../packages/i18n/src/*",
        "../../packages/i18n/dist/*"
      ]
    }
  },
  "include": [
    "next-env.d.ts",
    "instrumentation.ts",
    "i18n/**/*.json",
    "src/**/*",
    "src/app/**/*",
    "src/app/**/*.ts",
    "src/app/**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    ".next/types/server.d.ts",
    "**/__mocks__/**",
    "**/__tests__/**",
    "**/*.spec.*",
    "**/*.test.*"
  ],
  "references": [
    {
      "path": "../../packages/i18n"
    }
  ]
}
