// packages/themes/bcd/tsconfig.json
{
  "extends": "../../../tsconfig.base.json",

  "compilerOptions": {
    /* this theme emits JS + declaration files ------------------------ */
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "noEmit": false,
    "outDir": "dist",

    /* forbid `import './file.ts'` in source -------------------------- */
    "allowImportingTsExtensions": false,

    /* Node runtime globals (fs, path, etc.) -------------------------- */
    "types": ["node"]
  },

  "include": ["**/*.ts"],
  "exclude": ["dist"]
}
