{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "noEmit": false,
    "rootDir": "src",
    "outDir": "dist",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "target": "ES2022",
    "jsx": "react-jsx",
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "verbatimModuleSyntax": true,
    "baseUrl": ".",
    "paths": {
      "@acme/ui": [
        "../ui/src/index.ts",
        "../ui/dist/index.d.ts",
        "types-compat/ui"
      ],
      "@acme/ui/*": ["../ui/src/*", "../ui/dist/*"],
      "@acme/platform-core": ["src/index.ts", "dist/index.d.ts"],
      "@acme/platform-core/*": ["src/*", "dist/*"],
      "@acme/page-builder-core": [
        "../page-builder-core/src/index.ts",
        "../page-builder-core/dist/index.d.ts"
      ],
      "@acme/page-builder-core/*": [
        "../page-builder-core/src/*",
        "../page-builder-core/dist/*"
      ],

      "@acme/shared-utils": [
        "../shared-utils/src/index.ts",
        "../shared-utils/dist/index.d.ts"
      ],
      "@acme/shared-utils/*": [
        "../shared-utils/src/*",
        "../shared-utils/dist/*"
      ],
      "@acme/date-utils": [
        "../date-utils/src/index.ts",
        "../date-utils/dist/index.d.ts"
      ],
      "@acme/date-utils/*": ["../date-utils/src/*", "../date-utils/dist/*"],
      "@acme/stripe": ["../stripe/src/index.ts", "../stripe/dist/index.d.ts"],
      "@acme/stripe/*": ["../stripe/src/*", "../stripe/dist/*"],

      "@acme/email": ["../email/src/index.ts", "../email/dist/index.d.ts"],
      "@acme/email/*": ["../email/src/*", "../email/dist/*"],

      "@acme/config/env/*": ["../config/src/env/*", "../config/dist/env/*"],
      "@acme/i18n": ["../i18n/src/index.ts", "../i18n/dist/index.d.ts"],
      "@acme/i18n/*": ["../i18n/src/*", "../i18n/dist/*"],
      "@acme/email-templates": [
        "../email-templates/src/index.ts",
        "../email-templates/dist/index.d.ts"
      ]
    }
  },
  "include": ["src*", "src*.json", "src/**/*", "src/**/*.json"],
  "references": [
    { "path": "../config" },
    { "path": "../date-utils" },
    { "path": "../i18n" },
    { "path": "../shared-utils" },
    { "path": "../stripe" },
    { "path": "../types" },
    { "path": "../themes/base" },
    { "path": "../zod-utils" },
    { "path": "../email-templates" },
    { "path": "../plugins/sanity" },
    { "path": "../page-builder-core" }
  ],
  "files": ["../../packages/types/src/global.d.ts"]
}
