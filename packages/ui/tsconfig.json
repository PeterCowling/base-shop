{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "noEmit": false,
    "emitDeclarationOnly": false,
    "rootDir": "./",
    "outDir": "./dist",
    "declarationDir": "./dist",
    "declarationMap": true,
    "jsx": "react-jsx",
    "types": [
      "react",
      "react-dom",
      "jest",
      "@testing-library/jest-dom"
    ],
    "resolveJsonModule": true,
    "moduleResolution": "Bundler",
    "module": "ESNext",
    "target": "ES2022",
    "baseUrl": ".",
    "paths": {
      "@acme/platform-core": [
        "../platform-core/src/index"
      ],
      "@acme/platform-core/*": [
        "../platform-core/src/*"
      ]
    }
  },
  "references": [
    {
      "path": "../platform-core"
    },
    {
      "path": "../i18n"
    },
    {
      "path": "../config"
    },
    {
      "path": "../auth"
    },
    {
      "path": "../lib"
    },
    {
      "path": "../shared-utils"
    },
    {
      "path": "../date-utils"
    }
  ],
  "include": [
    "src*",
    "src*.json",
    "types-compat*.d.ts",
    "src*",
    "src*.json",
    "types-compat*.d.ts"
  ],
  "exclude": [
    "dist",
    "**/__tests__*.stories.*",
    "src__tests__*.stories.*",
    "src__tests__/**"
  ]
}
