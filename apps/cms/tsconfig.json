// apps/cms/tsconfig.json   ★ updated
{
  "extends": "../../tsconfig.base.json",

  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "noEmit": false,
    "outDir": "dist",

    /* existing options … */
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "incremental": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "plugins": [{ "name": "next" }],
    "jsx": "preserve",
    "target": "ES2017",
    "skipLibCheck": true,
    "strict": false,
    "module": "esnext",
    "moduleResolution": "node",
    "types": ["node", "react", "react-dom"]
  },

  "include": ["src/**/*", ".next/types/**/*.ts"],

  "exclude": [
    "dist",
    "__tests__",
    "**/*.test.ts",
    "**/*.test.tsx",
    "node_modules",
    "../../apps-script"
  ],

  "references": [
    { "path": "../../packages/types" },
    { "path": "../../packages/config" },
    { "path": "../../packages/ui" },
    { "path": "../../packages/components" },
    { "path": "../../packages/themes/base" }
  ]
}
