// apps/cms/tsconfig.json
{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    /* ----------------- existing options (unchanged) ----------------- */
    "outDir": "dist",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    /* ----------------- ðŸ‘‡  enable TSX / JSX support ----------------- */
    "jsx": "preserve",
    "target": "ES2017",
    "skipLibCheck": true,
    "strict": false,
    "module": "esnext",
    "moduleResolution": "node"
  },
  "include": [
    "src",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
