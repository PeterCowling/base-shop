{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "../dist-scripts",
    "composite": true,
    "rootDir": "./",
    "rootDirs": [
      "./",
      "../packages/types/src",
      "../packages/platform-core",
      "../packages/lib",
      "../src"
    ]
  },
  "references": [
    { "path": "../packages/platform-core" },
    { "path": "../packages/lib" },
    { "path": "../src" }
  ],
  "include": ["*.ts", "../src/types/**/*.ts"],
  "exclude": ["../dist-scripts"]
}
