{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "types": ["@testing-library/jest-dom", "jest", "node"],
    "noEmit": true,
    "allowJs": true,
    "rootDir": "../..",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "verbatimModuleSyntax": false,
    "paths": {
      "@jest/globals": ["test/jest-globals-compat.d.ts"],
      "@acme/zod-utils": ["../zod-utils/dist/index.d.ts"],
      "@acme/zod-utils/*": ["../zod-utils/dist/*"]
    }
  },
  "include": ["src/**/*", "__tests__/**/*"]
}
