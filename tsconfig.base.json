{
  "compilerOptions": {
    "target": "es2021",
    "module": "esnext",
    "moduleResolution": "bundler",
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "@ui/*": ["packages/ui/*"],
      "@lib/*": ["packages/lib/*"],
      "@contexts/*": ["packages/lib/contexts/*"],
      "@/components/*": ["packages/ui/components/*"],
      "@/lib/*": ["packages/lib/*"],
      "@/contexts/*": ["packages/lib/contexts/*"],
      "@i18n/*": ["packages/i18n/*"],
      "@/i18n/*": ["packages/i18n/*"]
    },
    "types": ["@types/node", "@total-typescript/ts-reset"],
    "strict": true,
    "exactOptionalPropertyTypes": true,
    "skipLibCheck": true
  }
}
