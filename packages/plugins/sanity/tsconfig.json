{
  "extends": "../../../tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "noEmit": false,
    "rootDir": ".",
    "outDir": "dist",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "target": "ES2022",
    "skipLibCheck": true,
    "strict": true
  },
  "include": [
    "index.ts",
    "src/**/*",
    "src/**/*.json"
  ],
  "exclude": [
    "dist"
  ],
  "references": [
    { "path": "../../types" }
  ]
}
