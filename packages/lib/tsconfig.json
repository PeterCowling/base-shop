// packages/lib/tsconfig.json
{
  "extends": "../../tsconfig.base.json",

  "compilerOptions": {
    /* library emits JS + .d.ts -------------------------------------- */
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "noEmit": false,
    "rootDir": "src",
    "outDir": "dist",

    /* Node-only helpers --------------------------------------------- */
    "types": ["node"],
    "moduleResolution": "bundler",
  },

  /* source globs ---------------------------------------------------- */
  "include": ["src/**/*"],
  "exclude": [
    "dist", // freshly emitted output
    ".turbo", // turbo cache
    "node_modules", // package deps (if any local)
    "src/__tests__", // test files (legacy)
    "**/__tests__/**",
    "**/*.test.ts?(x)"
  ],

  "references": [
    { "path": "../platform-core" },
    { "path": "../config" },
    { "path": "../zod-utils" },
    { "path": "../i18n" }
  ]
}
