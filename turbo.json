{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [
    ".turbo-cache-version",
    "jest.coverage.cjs",
    "jest.config.helpers.cjs",
    "jest.moduleMapper.cjs",
    "packages/config/jest.preset.cjs",
    "packages/config/coverage-tiers.cjs",
    "pnpm-lock.yaml"
  ],
  "tasks": {
    "dev": {
      "cache": false,
      "persistent": true,
      "dependsOn": [
        "^build"
      ]
    },
    "build": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        "dist/**",
        ".next/**",
        "*.tsbuildinfo"
      ]
    },
    "lint": {
      "dependsOn": [
        "^lint"
      ]
    },
    "typecheck": {
      "dependsOn": [
        "^build"
      ],
      "outputs": []
    },
    "test": {
      "dependsOn": [],
      "inputs": [
        "src/**/*.ts",
        "src/**/*.tsx",
        "**/*.test.ts",
        "**/*.test.tsx",
        "**/*.spec.ts",
        "**/*.spec.tsx",
        "test/**",
        "__tests__/**",
        "package.json",
        "tsconfig*.json",
        "jest.config.*"
      ],
      "outputs": [
        "coverage/**"
      ],
      "env": [
        "CI"
      ]
    }
  }
}
