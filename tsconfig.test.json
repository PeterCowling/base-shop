      { "path": "./packages/plugins/sanity/tsconfig.test.json" },
      { "path": "./packages/sanity/tsconfig.test.json" },
      { "path": "./packages/stripe/tsconfig.test.json" },
      { "path": "./packages/telemetry/tsconfig.test.json" },
