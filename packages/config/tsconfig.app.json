{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "noEmit": false,
    "outDir": "dist",
    "declarationDir": "dist",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "incremental": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "plugins": [{ "name": "next" }],
    "jsx": "preserve",
    "target": "ES2022",
    "strict": false,
    "module": "esnext",
    "moduleResolution": "bundler",
    "types": ["node", "react", "react-dom"],
    "skipLibCheck": true
  },
  "exclude": [
    "dist",
    "node_modules",
    "**/__mocks__/**",
    "**/__tests__/**",
    "../../test"
  ]
}
