{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "module": "esnext",
    "moduleResolution": "bundler",
    "types": ["@testing-library/jest-dom", "jest", "node", "react"],
    "noEmit": true,
    "rootDir": "../..",
    "resolveJsonModule": true,
    "paths": {
      "@acme/types": ["../types/dist/index.d.ts"],
      "@acme/types/*": ["../types/dist/*"]
    }
  },
  "include": ["src/**/*", "src/**/*.json", "__tests__/**/*"]
}
