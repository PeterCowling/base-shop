{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "rootDir": "../..",
    "types": ["node", "cypress"],

    /* keep .ts extension in imports */
    "allowImportingTsExtensions": true,

    /* tell the compiler “type-check only” so TS5096 is satisfied */
    "noEmit": true
  },
  "include": ["./**/*.ts", "./**/*.tsx"]
}
