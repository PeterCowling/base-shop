{
  "name": "@apps/brikette",
  "private": true,
  "scripts": {
    "dev": "cross-env NODE_OPTIONS=\"--require ./scripts/ssr-polyfills.cjs\" next dev -p 3014",
    "build": "cross-env NODE_OPTIONS=\"--require ./scripts/ssr-polyfills.cjs\" next build",
    "start": "cross-env NODE_OPTIONS=\"--require ./scripts/ssr-polyfills.cjs\" next start -p 3014",
    "lint": "eslint .",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "test:unit": "vitest run --passWithNoTests -c vitest.config.ts --coverage --coverage.reporter=text-summary --no-file-parallelism --maxWorkers 1",
    "test:unit:watch": "vitest --passWithNoTests -c vitest.config.ts",
    "test": "TSX_TSCONFIG_PATH=tsconfig.scripts.json node --import tsx scripts/check-english-fallbacks.ts && TSX_TSCONFIG_PATH=tsconfig.scripts.json node --import tsx scripts/check-empty-content-keys.ts && TSX_TSCONFIG_PATH=tsconfig.scripts.json node --import tsx scripts/check-travel-direction-spacing.ts && TSX_TSCONFIG_PATH=tsconfig.scripts.json node --import tsx scripts/check-guides-translations.ts && TSX_TSCONFIG_PATH=tsconfig.scripts.json node --import tsx scripts/check-capri-gallery-assets.ts && TSX_TSCONFIG_PATH=tsconfig.scripts.json node --import tsx scripts/check-assistance-translations.ts",
    "test:deals": "TSX_TSCONFIG_PATH=tsconfig.scripts.json node --import tsx scripts/check-deal-status.ts",
    "i18n:coverage": "node --import tsx scripts/check-i18n-coverage.ts"
  },
  "dependencies": {
    "@acme/next-config": "workspace:*",
    "@acme/telemetry": "workspace:*",
    "@acme/ui": "workspace:*",
