// packages/themes/base/tsconfig.json
{
  "extends": "../../../tsconfig.base.json",

  "compilerOptions": {
    /* this theme emits JS + declaration files ------------------------ */
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "noEmit": false,
    "outDir": "dist",

    /* forbid imports that end with .ts ------------------------------- */
    "allowImportingTsExtensions": false,

    /* Node globals (fs, path, etc.) ---------------------------------- */
    "types": ["node"]
  },

  "include": ["**/*.ts"],
  "exclude": ["dist"]
}
