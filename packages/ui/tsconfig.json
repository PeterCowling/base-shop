// packages/ui/tsconfig.json
{
  "extends": "../../tsconfig.base.json",

  "compilerOptions": {
    /* ---------- build settings ------------------------------------ */
    "composite": true,
    "noEmit": false, // we *do* emit
    "emitDeclarationOnly": false,

    /* ---------- output locations ---------------------------------- */
    "rootDir": "./", // allow imports from workspace packages
    "outDir": "./dist", // <- JS + d.ts land here
    "declarationDir": "./dist",
    "declarationMap": true,

    /* ---------- React / JSX --------------------------------------- */
    "jsx": "react-jsx",

    /* ---------- misc ---------------------------------------------- */
    "types": ["react", "react-dom", "jest", "@testing-library/jest-dom"]
  },

  /* ---------- project references (build order) -------------------- */
  "references": [
    { "path": "../platform-core" },
    { "path": "../i18n" },
    { "path": "../config" },
    { "path": "../auth" },
    { "path": "../lib" },
    { "path": "../shared-utils" },
    { "path": "../date-utils" }
  ],

  /* ---------- file globs ------------------------------------------ { "path": "../../apps/cms" } */
  "include": ["src/**/*", "src/**/*.json"], // ONLY stuff inside src/
  "exclude": [
    "dist", // freshly emitted output
    "**/__tests__/**", // unit/integration tests
    ".turbo", // turbo cache
    "node_modules" // package deps (if any local)
  ]
}
