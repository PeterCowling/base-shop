{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": true,
    "composite": false,
    "declaration": true,
    "declarationMap": false,
    "emitDeclarationOnly": false,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "verbatimModuleSyntax": false,
    "allowJs": true,
    "allowImportingTsExtensions": true,
    "rootDir": "../..",
    "types": ["node", "jest", "@testing-library/jest-dom", "react", "react-dom"],
    "paths": {
      "@/*": ["src/*"],
      "@acme/ui": ["./src/index", "./dist/index.d.ts"],
      "@acme/ui/*": ["./src/*", "./dist/*"],
      "@acme/platform-core": ["../platform-core/dist/index.d.ts"],
      "@acme/platform-core/*": ["../platform-core/dist/*"],
      "@platform-core": ["../platform-core/dist/index.d.ts"],
      "@platform-core/*": ["../platform-core/dist/*"],
      "@acme/config": ["../config/src/index", "../config/dist/index.d.ts"],
      "@acme/config/*": ["../config/src/*", "../config/dist/*"],
      "@cms/actions/media.server": ["types-compat/cms-actions-media-server"],
      "@cms": ["../../apps/cms/src", "../../apps/cms/dist/index.d.ts"],
      "@cms/*": ["../../apps/cms/src/*", "../../apps/cms/dist/*"],
      "@acme/types": ["../types/dist/index.d.ts"],
      "@acme/types/*": ["../types/dist/*"],
      "@acme/auth": ["../auth/dist/index.d.ts"],
      "@acme/auth/*": ["../auth/dist/*"],
      "@ui": ["./src/index", "./dist/index.d.ts"],
      "@ui/*": ["./src/*", "./dist/*"],
      "@auth": ["types-compat/auth"],
      "@i18n": ["../i18n/dist/index.d.ts"],
      "@i18n/*": ["../i18n/dist/*"],
      "@acme/i18n": ["../i18n/dist/index.d.ts"],
      "@acme/i18n/locales": ["types-compat/i18n-locales"],
      "@acme/i18n/parseMultilingualInput": ["types-compat/i18n-parseMultilingualInput"],
      "@acme/i18n/resolveText": ["types-compat/i18n-resolveText"],
      "@acme/i18n/*": ["../i18n/dist/*"],
      "@acme/telemetry": ["types-compat/telemetry", "../telemetry/dist/index.d.ts"],
      "@acme/telemetry/*": ["../telemetry/dist/*"],
      "@acme/page-builder-core": ["../page-builder-core/dist/index.d.ts"],
      "@acme/page-builder-core/*": ["../page-builder-core/dist/*"],
      "~test/*": ["../../test/*"]
    }
  },
  "include": ["src/**/*", "__tests__/**/*", "types-compat/**/*"],
  "exclude": [
    "dist",
    "node_modules",
    "**/*.stories.*",
    "src/story-utils/**",
    "src/components/story-utils/**",
    "__tests__/**"
  ]
}
