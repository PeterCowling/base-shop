// scripts/tsconfig.json
{
  "extends": "../tsconfig.base.json",

  "compilerOptions": {
    /* ───── declaration-only build ───── */
    "composite": true,
    "declaration": true,
    "emitDeclarationOnly": true, // ← JS never emitted
    "noEmit": false, // must allow emit

    /* ───── output location ───── */
    "outDir": "../dist-scripts",
    "declarationDir": "../dist-scripts",
    "declarationMap": true,

    /* ───── language / module target ───── */
    "module": "esnext",
    "target": "ES2017",

    /* ───── Node typings only ───── */
    "types": ["node"],

    /* ───── keep imports extension-less ───── */
    "allowImportingTsExtensions": false
  },

  /* ───── project references ───── */
  "references": [
    { "path": "../packages/platform-core" },
    { "path": "../packages/lib" },
    { "path": "../packages/config" }
  ],

  /* ───── source globs ───── */
  "include": ["**/*.ts"],
  "exclude": ["../dist-scripts"] // prevents output → input loop
}
