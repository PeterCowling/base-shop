{
  "extends": "@acme/config/tsconfig.app.json",
  "compilerOptions": {
    "allowJs": false,
    "baseUrl": ".",
    "rootDir": "../..",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "instrumentation.ts",
    "middleware.ts",
    "src/**/*",
    "src/**/*.json",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "**/__mocks__/**",
    "**/__tests__/**",
    "**/*.spec.*",
    "**/*.test.*"
  ],
  "references": [
    {
      "path": "../../packages/ui"
    },
    {
      "path": "../../packages/i18n"
    },
    {
      "path": "../../packages/platform-core"
    }
  ]
}
