{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "noEmit": false,
    "rootDir": "src",
    "outDir": "dist",
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "paths": {
      "@acme/lib": [
        "packages/lib/src/index.ts",
        "packages/lib/dist/index.d.ts"
      ],
      "@acme/lib/*": [
        "packages/lib/src/*",
        "packages/lib/dist/*"
      ]
    },
    "types": ["node"]
  },
  "include": ["src/**/*"],
  "exclude": [
    "dist",
    ".turbo",
    "node_modules",
    "**/__tests__/**",
    "**/__mocks__/**",
    "**/*.test.*",
    "**/*.spec.*"
  ],
  "references": [
    { "path": "../config" },
    { "path": "../platform-core" },
    { "path": "../zod-utils" }
  ]
}
