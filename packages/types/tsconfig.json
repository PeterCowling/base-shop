// packages/types/tsconfig.json   ★ final version
{
  "extends": "../../tsconfig.base.json",

  "compilerOptions": {
    /* ───── emit the declaration bundle this package provides ───── */
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true, // ← optional but common for pure-types pkgs
    "noEmit": false, // ←■■ override the base setting ■■

    /* 👉 everything lands in /dist, never in /src */
    "outDir": "dist",
    "declarationDir": "dist",

    /* ───── safety / ergonomics flags ───── */
    "strict": true,
    "moduleSuffixes": [".server", ".client", ""],
    "allowImportingTsExtensions": false
  },

  /* only the type definitions in this folder */
  "include": ["src/**/*"],

  /* keep emitted files out of the next compile cycle */
  "exclude": ["dist"]
}
