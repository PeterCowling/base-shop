// packages/i18n/tsconfig.json

{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "composite": true, // required for project references
    "outDir": "dist", // emit d.ts â†’ dist
    "jsx": "react-jsx", // enable TSX support
    "rootDirs": ["./", "../../src"]
  },
  "include": [
    "*.ts",
    "*.tsx",
    "src/Translations.d.ts",
    "src/Translations.tsx",
    "src/locales.d.ts",
    "src/locales.ts",
    "../../src/types/**/*.ts"
  ],
  "exclude": ["dist"],
  "references": [{ "path": "../../src" }]
}
