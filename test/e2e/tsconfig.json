// test/e2e/tsconfig.json
{
  "extends": "../../tsconfig.base.json",

  "compilerOptions": {
    /* -------------------------------------------------------------
     * test-only settings (type-check only, no output)
     * ----------------------------------------------------------- */
    "noEmit": true,
    "allowImportingTsExtensions": true,

    /* TS 5 bundler-style resolution required for the flag above */
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "target": "ES2022",
    "lib": ["ES2022", "DOM"],

    /* QoL flags */
    "resolveJsonModule": true,
    "verbatimModuleSyntax": true,
    "strict": true,
    "skipLibCheck": true,

    /* Cypress & Node globals */
    "types": ["node", "cypress"]
  },

  "include": ["**/*.ts", "**/*.tsx"]
}
