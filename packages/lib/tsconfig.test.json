{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "types": ["jest", "node"],
    "composite": true,
    "declaration": true,
    "declarationMap": false,
    "declarationDir": ".ts-jest",
    "noEmit": false,
    "noEmitOnError": false,
    "rootDir": ".",
    "outDir": ".ts-jest",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "esModuleInterop": true
  },
  "include": ["src/**/*", "__tests__/**/*"],
  "exclude": []
}
