// packages/ui/tsconfig.json
{
  "extends": "../../tsconfig.base.json",

  "compilerOptions": {
    /* ───── declaration-only build ───── */
    "composite": true,
    "declaration": true,
    "emitDeclarationOnly": true, // ← no JS emitted
    "noEmit": false, // ← must allow emit

    /* ───── output location ───── */
    "outDir": "dist",
    "declarationDir": "dist",
    "declarationMap": true,

    /* ───── React / JSX support ───── */
    "jsx": "react-jsx",

    /* ───── forbid extensionful imports when emitting ───── */
    "allowImportingTsExtensions": false,

    /* ───── compile-time globals ───── */
    "types": ["react", "react-dom", "jest"]
  },

  /* ───── project references ───── */
  "references": [
    { "path": "../platform-core" },
    { "path": "../i18n" },
    { "path": "../config" },
    { "path": "../auth" },
    { "path": "../lib" },
    { "path": "../../apps/cms" }
  ],

  /* ───── source globs ───── */
  "include": ["components/**/*", "hooks/**/*", "layout/**/*", "utils/**/*"],
  "exclude": ["dist"] // keeps fresh emits out of next graph
}
