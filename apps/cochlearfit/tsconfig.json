{
  "extends": "../../packages/config/tsconfig.nextjs-app.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*",
        "dist/*"
      ]
    }
  },
  "include": [
    "next-env.d.ts",
    "instrumentation.ts",
    "i18n/**/*.json",
    "src/**/*",
    "src/app/**/*",
    "src/app/**/*.ts",
    "src/app/**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    ".next/types/server.d.ts",
    "**/__mocks__/**",
    "**/__tests__/**",
    "**/*.spec.*",
    "**/*.test.*"
  ],
  "references": [
    {
      "path": "../../packages/i18n"
    }
  ]
}
