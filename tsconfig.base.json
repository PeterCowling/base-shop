{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "ES2022",
    "module": "esnext",
    "jsx": "react-jsx",
    "moduleResolution": "bundler",
    "moduleSuffixes": [
      ".server",
      ".client",
      ""
    ],
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "noEmit": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "outDir": "dist-types",
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "types": [
      "node",
      "react",
      "react-dom"
    ],
    "paths": {
      "@acme/platform-machine": [
        "packages/platform-machine"
      ],
      "@acme/platform-machine/*": [
        "packages/platform-machine/*"
      ],
      "@acme/ui": [
        "packages/ui"
      ],
      "@acme/ui/*": [
        "packages/ui/*"
      ],
      "@cms": [
        "apps/cms"
      ],
      "@cms/*": [
        "apps/cms/*"
      ],
      "@themes/*": [
        "packages/themes/*"
      ],
      "@acme/lib": [
        "packages/lib"
      ],
      "@acme/lib/*": [
        "packages/lib/*"
      ],
      "@i18n": [
        "packages/i18n"
      ],
      "@i18n/*": [
        "packages/i18n/*"
      ],
      "@auth": [
        "packages/auth"
      ],
      "@auth/*": [
        "packages/auth/*"
      ],
      "@acme/config": [
        "packages/config"
      ],
      "@acme/config/*": [
        "packages/config/*"
      ],
      "@platform-core": [
        "packages/platform-core"
      ],
      "@platform-core/*": [
        "packages/platform-core/*"
      ],
      "@acme/shared-utils": [
        "packages/shared-utils"
      ],
      "@acme/shared-utils/*": [
        "packages/shared-utils/*"
      ],
      "@acme/email": [
        "packages/email"
      ],
      "@acme/email/*": [
        "packages/email/*"
      ],
      "@acme/stripe": [
        "packages/stripe"
      ],
      "@acme/stripe/*": [
        "packages/stripe/*"
      ],
      "@acme/sanity": [
        "packages/sanity"
      ],
      "@acme/sanity/*": [
        "packages/sanity/*"
      ],
      "@acme/date-utils": [
        "packages/date-utils"
      ],
      "@acme/date-utils/*": [
        "packages/date-utils/*"
      ],
      "@acme/configurator": [
        "packages/configurator"
      ],
      "@acme/configurator/*": [
        "packages/configurator/*"
      ],
      "@acme/next-config": [
        "packages/next-config"
      ],
      "@acme/next-config/*": [
        "packages/next-config/*"
      ],
      "@acme/tailwind-config": [
        "packages/tailwind-config"
      ],
      "@acme/tailwind-config/*": [
        "packages/tailwind-config/*"
      ]
    }
  },
  "files": [
    "./src/types/global.d.ts"
  ],
  "exclude": [
    "**/__mocks__/**",
    "**/__tests__/**"
  ]
}
