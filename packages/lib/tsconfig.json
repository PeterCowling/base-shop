// packages/lib/tsconfig.json  ★ final
{
  "extends": "../../tsconfig.base.json",

  "compilerOptions": {
    /* library emits JS + .d.ts -------------------------------------- */
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "noEmit": false,
    "outDir": "dist",

    /* Node-only helpers --------------------------------------------- */
    "types": ["node"],
    "moduleResolution": "node",
    "allowImportingTsExtensions": false
  },

  /* build dependency graph ------------------------------------------ */
  "references": [
    { "path": "../platform-core" }, // ← ★ add this
    { "path": "../config" }
  ],

  /* source globs ---------------------------------------------------- */
  "include": ["*.ts", "*.d.ts", "src/**/*"],
  "exclude": ["dist", "__tests__"]
}
