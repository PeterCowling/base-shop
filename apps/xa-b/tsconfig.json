{
  "extends": "@acme/config/tsconfig.app.json",
  "compilerOptions": {
    "allowJs": false,
    "baseUrl": ".",
    "rootDir": "../..",
    "paths": {
      "@ui": [
        "../../packages/ui/dist",
        "../../packages/ui/src"
      ],
      "@ui/*": [
        "../../packages/ui/dist/*",
        "../../packages/ui/src/*"
      ],
      "@i18n": [
        "../../packages/i18n/dist/index.js",
        "../../packages/i18n/dist/index.d.ts"
      ],
      "@i18n/*": [
        "../../packages/i18n/dist/*"
      ],
      "@acme/i18n": [
        "../../packages/i18n/dist/index.js",
        "../../packages/i18n/dist/index.d.ts"
      ],
      "@acme/i18n/*": [
        "../../packages/i18n/dist/*"
      ],
      "@platform-core": [
        "../../packages/platform-core/src/index.ts",
        "../../packages/platform-core/dist/index"
      ],
      "@platform-core/*": [
        "../../packages/platform-core/src/*",
        "../../packages/platform-core/dist/*"
      ],
      "@acme/platform-core": [
        "../../packages/platform-core/src/index.ts",
        "../../packages/platform-core/dist/index"
      ],
      "@acme/platform-core/*": [
        "../../packages/platform-core/src/*",
        "../../packages/platform-core/dist/*"
      ]
    }
  },
  "include": [
    "next-env.d.ts",
    "src/**/*",
    "src/**/*.json",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "**/__mocks__/**",
    "**/__tests__/**",
    "**/*.spec.*",
    "**/*.test.*"
  ],
  "references": [
    {
      "path": "../../packages/ui"
    },
    {
      "path": "../../packages/i18n"
    },
    {
      "path": "../../packages/platform-core"
    }
  ]
}
