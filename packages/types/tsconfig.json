// packages/types/tsconfig.json   â˜… final version
{
  "extends": "../../tsconfig.base.json",

  "compilerOptions": {
    /* â”€â”€â”€â”€â”€ emit the declaration bundle this package provides â”€â”€â”€â”€â”€ */
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true, // â† optional but common for pure-types pkgs
    "noEmit": false, // â†â– â–  override the base setting â– â– 

    /* ğŸ‘‰ everything lands in /dist, never in /src */
    "outDir": "dist",
    "declarationDir": "dist",

    /* â”€â”€â”€â”€â”€ safety / ergonomics flags â”€â”€â”€â”€â”€ */
    "strict": true,
    "moduleSuffixes": [".server", ".client", ""],
    "allowImportingTsExtensions": false
  },

  /* only the type definitions in this folder */
  "include": ["src/**/*"],

  /* keep emitted files out of the next compile cycle */
  "exclude": ["dist"]
}
