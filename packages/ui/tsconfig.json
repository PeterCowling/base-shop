// packages/ui/tsconfig.json
{
  "extends": "../../tsconfig.base.json",

  "compilerOptions": {
    /* library emits JS + declaration files --------------------------- */
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "noEmit": false,
    "outDir": "dist",

    /* React JSX support ---------------------------------------------- */
    "jsx": "react-jsx",

    /* forbid `import './x.ts'` in source ----------------------------- */
    "allowImportingTsExtensions": false,

    /* React globals available at compile-time ------------------------ */
    "types": ["react", "react-dom"]
  },

  /* ------------------------------------------------------------------
   * Project references â€“ downstream deps built first
   * ------------------------------------------------------------------ */
  "references": [
    { "path": "../platform-core" },
    { "path": "../i18n" },
    { "path": "../config" },
    { "path": "../auth" },
    { "path": "../lib" }
  ],

  /* ------------------------------------------------------------------
   * Source globs
   * ------------------------------------------------------------------ */
  "include": ["components/**/*", "hooks/**/*", "layout/**/*", "utils/**/*"],
  "exclude": ["dist"]
}
