{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "outDir": "dist",
    "rootDir": "../..",
    "rootDirs": ["./", "../platform-core", "../lib", "../../src"],
    "baseUrl": ".",
    "paths": {
      "@platform-machine": ["."],
      "@platform-machine/*": ["*"]
    }
  },
  "references": [
    { "path": "../platform-core" },
    { "path": "../lib" },
    { "path": "../../src" }
  ],
  "include": ["**/*.ts", "**/*.tsx", "../../src/types/**/*.ts"],
  "exclude": ["dist"]
}
