{
  "extends": "../../tsconfig.base.json",

  "compilerOptions": {
    /* Emit JS + d.ts --------------------------------------------------------- */
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "noEmit": false,
    "rootDir": "src",
    "outDir": "dist",

    /* TS 5 bundler-style resolution (Next/Vite friendly) --------------------- */
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "target": "ES2022",
    "lib": ["ES2022", "DOM"],

    /* React translations components ----------------------------------------- */
    "jsx": "react-jsx",

    /* App/library ergonomics ------------------------------------------------- */
    "resolveJsonModule": true,
    "verbatimModuleSyntax": true,

    /* Ambient types ---------------------------------------------------------- */
    "types": ["react", "react-dom"]
  },

  /* Build types first if needed --------------------------------------------- */
  "references": [{ "path": "../types" }],

  "include": ["src/**/*"],
  "exclude": ["dist", "__tests__", ".turbo", "node_modules"]
}
