{
  "name": "cms-monorepo",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "packageManager": "pnpm@10.12.1",
  "engines": {
    "node": ">=20"
  },
  "workspaces": [
    "apps/*",
    "packages/*",
    "packages/*/*",
    "apps-script",
    "packages/plugins/sanity"
  ],
  "scripts": {
    "dev": "turbo run dev --parallel",
    "dev:trace": "cross-env NODE_OPTIONS=\"--trace-uncaught --enable-source-maps\" pnpm --filter cms dev",
    "build": "pnpm run build:tokens && pnpm run check:tailwind-preset && turbo run build",
    "build:tokens": "tsx ./scripts/src/build-tokens.ts",
    "build:trace": "cross-env NODE_OPTIONS=\"--trace-uncaught --enable-source-maps\" pnpm --filter cms exec next build --debug",
    "start": "turbo run start --parallel",
    "lint": "turbo run lint",
    "lint:apps": "eslint \"apps/**/*.{ts,tsx}\"",
    "lint:all": "eslint \"{apps,packages,src}/**/*.{ts,tsx,js,jsx}\" --ignore-pattern \"**/dist/**\"",
    "typecheck": "tsc -b --pretty",
    "test": "CI=true turbo run test",
    "test:coverage": "CI=true turbo run test -- --coverage",
    "e2e": "cypress run",
    "i18n:extract": "next-intl extract",
    "i18n:check": "ts-node scripts/check-i18n-schemas.ts",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "test-storybook": "test-storybook --url http://localhost:6007",
    "preview": "wrangler pages dev",
    "format": "prettier --write .",
    "create-shop": "ts-node scripts/create-shop.ts",
    "init-shop": "ts-node scripts/src/init-shop.ts",
    "generate-shop": "ts-node scripts/src/generate-shop.ts",
    "setup-ci": "ts-node scripts/setup-ci.ts",
    "gen": "plop --plopfile plopfile.ts",
    "plop": "pnpm gen",
    "release-deposits": "ts-node scripts/release-deposits.ts",
    "provision-cms": "pnpm run create-shop && pnpm run build:tokens",
    "cms:migrate": "ts-node scripts/migrate-cms.ts",
    "pages:migrate": "ts-node scripts/src/migrate-pages.ts",
    "deposit-service": "ts-node packages/platform-machine/releaseDepositsService.ts",
    "lh:checkout": "lighthouse http://localhost:3000/en/checkout --chrome-flags=\"--headless\" --only-categories=performance,accessibility,best-practices,seo --preset=desktop",
    "seo:audit": "tsx scripts/seo-audit.ts",
    "validate-env": "ts-node scripts/src/validate-env.ts",
    "check:locales": "ts-node scripts/src/check-locales.ts",
    "check:tailwind-preset": "tsx scripts/check-tailwind-preset.ts",
    "shadcn:diff": "ts-node scripts/diff-shadcn.ts",
    "tailwind:check": "cross-env NODE_OPTIONS=\"--experimental-vm-modules\" jest test/unit/tailwind-build.spec.ts test/unit/postcss-config.spec.ts test/unit/tailwind-postcss.spec.ts",
    "chromatic": "npx chromatic --project-token=$CHROMATIC_PROJECT_TOKEN",
    "test:cms": "jest --ci --runInBand --detectOpenHandles --passWithNoTests --config ./jest.config.cjs",
    "audit": "pnpm audit",
    "secrets-scan": "gitleaks detect --no-git"
  },
  "dependencies": {
    "@cloudflare/next-on-pages": "^1.13.12",
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@portabletext/editor": "^2.3.1",
    "@portabletext/react": "^3.2.1",
    "@radix-ui/react-checkbox": "^1.3.2",
    "@radix-ui/react-dialog": "^1.1.14",
    "@radix-ui/react-icons": "^1.3.2",
    "@radix-ui/react-popover": "^1.1.14",
    "@radix-ui/react-select": "^2.2.5",
    "@radix-ui/react-slot": "^1.2.3",
    "@sanity/schema": "^4.3.0",
    "@sanity/types": "^4.3.0",
    "@sentry/node": "^9.33.0",
    "@stripe/react-stripe-js": "^3.7.0",
    "@stripe/stripe-js": "^7.3.1",
    "@tanstack/react-query": "^5.81.4",
    "bcryptjs": "^3.0.2",
    "chart.js": "^4.5.0",
    "fast-csv": "^5.0.5",
    "identity-obj-proxy": "^3.0.0",
    "next": "15.3.5",
    "next-auth": "4.24.11",
    "next-intl": "^3.5.0",
    "next-secure-headers": "^2.2.0",
    "next-seo": "^6.8.0",
    "nodemailer": "^6.10.1",
    "openai": "^4.104.0",
    "react": "^19.0.0",
    "react-chartjs-2": "^5.3.0",
    "react-dom": "^19.0.0",
    "react-hook-form": "^7.59.0",
    "rxjs": "^7.8.2",
    "shadcn-ui": "^0.9.5",
    "sharp": "^0.34.2",
    "stripe": "^18.2.1",
    "ulid": "^3.0.1",
    "zod": "^3.25.67"
  },
  "devDependencies": {
    "@acme/tailwind-config": "workspace:*",
    "@cloudflare/workers-types": "^4.20250704.0",
    "@eslint/compat": "^1.3.1",
    "@eslint/eslintrc": "^3.3.1",
    "@playwright/test": "^1.53.1",
    "@storybook/addon-a11y": "^9.0.15",
    "@storybook/addon-interactions": "^8.6.14",
    "@storybook/addon-themes": "^9.0.15",
    "@storybook/addon-viewport": "^9.0.8",
    "@storybook/nextjs": "^9.0.15",
    "@storybook/react": "9.0.15",
    "@storybook/test-runner": "^0.23.0",
    "@sveltejs/vite-plugin-svelte": "^5.1.0",
    "@tailwindcss/container-queries": "^0.1.1",
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/postcss": "^4",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@total-typescript/ts-reset": "^0.6.1",
    "@types/amphtml-validator": "^1.0.4",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.11.19",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "chromatic": "^13.0.1",
    "cross-env": "^7.0.3",
    "cross-fetch": "^4.1.0",
    "cypress": "^14.5.0",
    "eslint": "^9.30.1",
    "eslint-config-next": "15.3.5",
    "eslint-plugin-boundaries": "^5.0.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jest": "^29.0.1",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-testing-library": "^7.5.3",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lighthouse": "^11.5.0",
    "msw": "^1.3.5",
    "nock": "^13.4.0",
    "playwright": "^1.53.1",
    "plop": "^4.0.1",
    "polished": "^4.3.1",
    "prettier": "^3.5.3",
    "prettier-plugin-tailwindcss": "^0.6.13",
    "react-server-dom-webpack": "^19.1.0",
    "storybook": "^9.0.13",
    "superstruct": "^2.0.2",
    "tailwindcss": "^4.1.11",
    "ts-jest": "^29.1.5",
    "ts-node": "^10.9.1",
    "tsx": "^4.7.0",
    "turbo": "^2.5.4",
    "typescript": "5.8.3",
    "vite": "^7.0.0",
    "wrangler": "^4.20.4"
  },
  "pnpm": {
    "overrides": {
      "@shadcn/ui": "0.0.4",
      "scheduler": "0.26.0"
    }
  }
}
