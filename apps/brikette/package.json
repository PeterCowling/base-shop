    "fuse.js": "^7.1.0",
    "i18next": "^24.2.3",
    "i18next-resources-to-backend": "^1.2.1",
    "lucide-react": "^0.511.0",
    "next": "^15.3.6",
    "react": "19.1.0",
    "react-datepicker": "^8.3.0",
    "react-dom": "19.1.0",
    "react-i18next": "^15.5.3",
    "swiper": "^11.2.6",
    "web-vitals": "^5.0.2",
    "zod": "^3.25.73"
  },
  "devDependencies": {
    "typescript": "5.8.3"
  }
