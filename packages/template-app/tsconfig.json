{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "moduleResolution": "Bundler",
    "jsx": "preserve",
    "resolveJsonModule": true,
    // NOTE: Path mapping guidance â€” apps must map workspace packages
    // to BOTH their `src` and `dist` outputs so imports resolve before
    // and after building. See ../../docs/tsconfig-paths.md for examples.
    "paths": {
      "@/*": [
        "./src/*",
        "../ui/src/*",
        "../i18n/src/*",
        "../ui/dist/src/*",
        "../i18n/dist/*",
        "./dist/*"
      ],
      "@ui/*": ["../ui/src/*", "../ui/dist/src/*"],
      "@ui/src/*": ["../ui/src/*", "../ui/dist/src/*"],
      "@i18n/*": ["../i18n/src/*", "../i18n/dist/*"],
      "@platform-core": [
        "../platform-core/src/index.ts",
        "../platform-core/dist/index.d.ts"
      ],
      "@platform-core/*": ["../platform-core/src/*", "../platform-core/dist/*"],
      "@acme/platform-core": [
        "../platform-core/src/index.ts",
        "../platform-core/dist/index.d.ts"
      ],
      "@acme/platform-core/*": [
        "../platform-core/src/*",
        "../platform-core/dist/*"
      ],
      "@acme/config": [
        "../config/src/index.ts",
        "../config/dist/index.d.ts"
      ],
      "@acme/config/*": [
        "../config/src/*",
        "../config/dist/*"
      ],
      "@auth": [
        "../auth/src/index.ts",
        "../auth/src",
        "../auth/dist/index.d.ts",
        "../auth/dist"
      ],
      "@auth/*": ["../auth/src/*", "../auth/dist/*"],
      "@date-utils": [
        "../date-utils/src/index.ts",
        "../date-utils/src",
        "../date-utils/dist/index.d.ts",
        "../date-utils/dist"
      ],
      "@date-utils/*": ["../date-utils/src/*", "../date-utils/dist/*"],
      "@acme/date-utils": [
        "../date-utils/src/index.ts",
        "../date-utils/dist/index.d.ts"
      ],
      "@acme/date-utils/*": [
        "../date-utils/src/*",
        "../date-utils/dist/*"
      ],
      "@acme/telemetry": [
        "../telemetry/src/index.ts",
        "../telemetry/dist/index.d.ts"
      ],
      "@acme/telemetry/*": [
        "../telemetry/src/*",
        "../telemetry/dist/*"
      ],
      "@acme/sanity": [
        "../sanity/src/index.ts",
        "../sanity/dist/index.d.ts"
      ],
      "@acme/sanity/*": [
        "../sanity/src/*",
        "../sanity/dist/*"
      ],
      "@acme/stripe": [
        "../stripe/src/index.ts",
        "../stripe/dist/index.d.ts"
      ],
      "@acme/stripe/*": [
        "../stripe/src/*",
        "../stripe/dist/*"
      ]
    },
    "allowJs": true,
    "incremental": true,
    "isolatedModules": true,
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "middleware.ts",
    "i18n.ts",
    "next-intl.config.ts",
    "next-intl.config.mjs",
    "src/**/*",
    "src/**/*.json",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules"],
  "references": [
    { "path": "../config" },
    { "path": "../types" },
    { "path": "../date-utils" },
    { "path": "../i18n" },
    { "path": "../stripe" }
  ]
}
